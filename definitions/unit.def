inherit php72

unset DEF_SUFFIX DEF_AFTER_UNPACK_METHOD DEF_AFTER_INSTALL_METHOD

DEF_FULL_NAME="Nginx Unit + Php72"
DEF_SHA="722b0de99c336bce339918a50dab8f87446b824c"
DEF_NAME="unit"
DEF_VERSION="1.12.0"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_ORIGIN="https://${DEF_NAME}.nginx.org/download/${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_CONFIGURE_ARGS="--prefix=${PREFIX} --user=www --control=unix:${SERVICE_DIR}/service.sock --state=${SERVICE_DIR}/state --pid=${SERVICE_DIR}/service.pid --log=${SERVICE_DIR}/service.log --cc-opt='${CFLAGS}' --ld-opt='${LDFLAGS} -Wl,-rpath=${PREFIX}/lib,--enable-new-dtags'"
DEF_AFTER_CONFIGURE_METHOD="./configure php --config=${PREFIX}/bin/php-config --lib-path=${PREFIX}/lib"
DEF_REQUIREMENTS="${DEF_REQUIREMENTS} php72"
DEF_EXPORTS="unitd"
