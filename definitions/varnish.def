DEF_FULL_NAME="Varnish cache"
DEF_STANDALONE=YES
DEF_SHA="efe52b76aa09ac38f92d2b18931aa2f033baf02c"
DEF_NAME="varnish"
DEF_VERSION="4.1.2"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-cache-${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_CONFIGURE_METHOD="./autogen.sh ; ./configure"
DEF_CONFIGURE_ARGS="--with-sysroot=${SOFTWARE_DATA_DIR}"
DEF_REQUIREMENTS="pkgconf zlib pcre libressl python27 m4 make perl autoconf libtool texinfo automake groff"
DEF_EXPORTS="varnishd varnishstat varnishlog varnishadm varnishhist varnishncsa varnishtest varnishtop"
APP_USEFUL="bin/pip* bin/python*"
APP_USELESS="lib/perl* share/auto* share/acloca* share/groff share/libtool share/texinfo"
DEF_NO_CCACHE=YES

DEF_AFTER_UNPACK_METHOD="install_pyt_mods"
install_pyt_mods () {
    try "${PREFIX}/bin/pip install docutils"
}
