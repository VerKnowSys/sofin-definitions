DEF_FULL_NAME="Varnish cache"
DEF_STANDALONE=YES
DEF_SHA="1d9092d9fb42fbc2ab9fb255ec1cb50b5bdcebc7"
DEF_NAME="varnish"
DEF_VERSION="4.1.9"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tgz"
DEF_CONFIGURE_METHOD="./configure"
DEF_REQUIREMENTS="pkgconf zlib pcre m4 make libressl python27"
DEF_EXPORTS="varnishd varnishstat varnishlog varnishadm varnishhist varnishncsa varnishtest varnishtop"
APP_USEFUL="bin/pip* bin/python*"
APP_USELESS="lib/perl* share/auto* share/acloca* share/groff share/libtool share/texinfo"
DEF_NO_CCACHE=YES

DEF_AFTER_PATCH_METHOD="hack_pyt_mods"
hack_pyt_mods () {
    try "cp /usr/bin/true ${PREFIX}/bin/docutils"
    try "cp /usr/bin/true ${PREFIX}/bin/rst2man"
    try "cp /usr/bin/true ${PREFIX}/bin/rst2html"
}
