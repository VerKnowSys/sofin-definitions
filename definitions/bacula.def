DEF_CONFIGURE_ARGS="--with-tcp-wrappers=/usr/lib --enable-smartalloc --disable-nls --with-postgresql=${PREFIX} --with-openssl=${PREFIX} --disable-conio --with-scriptdir=${PREFIX}/share/${DEF_NAME} --enable-batch-insert --with-plugindir=${PREFIX}/lib --with-dump-email=root@localhost --with-job-email=root@localhost --with-sbin-perm=755 --with-baseport=9101 --with-sd-group=operator --disable-libtool DEBUG="
DEF_MAKE_METHOD="make"
DEF_INSTALL_METHOD="make -s install"
