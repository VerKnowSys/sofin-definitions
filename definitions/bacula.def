DISABLE_ON="Linux"
APP_STANDALONE="true"
APP_FULL_NAME="Bacula backup system"
APP_NAME="bacula"
APP_SHA="3c4b2430960daf2607e824f0c0641f65023e43ce"
APP_VERSION="7.0.5"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="gmake zlib libiconv libressl readline postgresql94 lzo"
APP_CONFIGURE_ARGS="--with-tcp-wrappers=/usr/lib --enable-smartalloc --disable-nls --with-postgresql=${PREFIX} --with-openssl=${PREFIX} --disable-conio --with-scriptdir=${PREFIX}/share/${APP_NAME} --enable-batch-insert --with-plugindir=${PREFIX}/lib --with-dump-email=root@localhost --with-job-email=root@localhost --with-sbin-perm=755 --with-baseport=9101 --with-sd-group=operator --disable-libtool DEBUG="
APP_MAKE_METHOD="gmake"
APP_INSTALL_METHOD="gmake install"
APP_EXPORTS="bacula bacula-dir bacula-fd bacula-sd bconsole bcopy bextract bls bpluginfo bregex bscan bsmtp btape btraceback bwild dbcheck"
