DEF_NAME="bacula"
DEF_SHA="3c4b2430960daf2607e824f0c0641f65023e43ce"
DEF_VERSION="7.0.5"
DEF_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
