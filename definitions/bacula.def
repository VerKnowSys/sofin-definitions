DEF_DISABLE_ON="Linux"
DEF_STANDALONE=YES
DEF_FULL_NAME="Bacula backup system"
DEF_NAME="bacula"
DEF_SHA="ca9d11b038dda91a65d8bf98981645ad0f0800f6"
DEF_VERSION="7.4.3"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_REQUIREMENTS="make zlib libiconv libressl libedit libedit postgresql94 lzo"
DEF_CONFIGURE_ARGS="--enable-smartalloc --disable-nls --with-postgresql=${PREFIX} --with-openssl=${PREFIX} --disable-conio --with-scriptdir=${PREFIX}/share/${DEF_NAME} --enable-batch-insert --with-plugindir=${PREFIX}/lib --with-dump-email=root@localhost --with-job-email=root@localhost --with-sbin-perm=755 --with-baseport=9101 --with-sd-group=operator --disable-libtool DEBUG="
case "${SYSTEM_NAME}" in
    Darwin)
        DEF_CONFIGURE_ARGS="${DEF_CONFIGURE_ARGS} --without-tcp-wrappers"
        ;;
    *)
        DEF_CONFIGURE_ARGS="${DEF_CONFIGURE_ARGS} --with-tcp-wrappers=/usr/lib"
        ;;
esac
DEF_MAKE_METHOD="make"
DEF_INSTALL_METHOD="make -s install"
DEF_EXPORTS="bacula bacula-dir bacula-fd bacula-sd bconsole bcopy bextract bls bpluginfo bregex bscan bsmtp btape btraceback bwild dbcheck"
