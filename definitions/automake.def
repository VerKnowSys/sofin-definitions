DEF_FULL_NAME="GNU Automake"
DEF_NAME="automake"
DEF_SHA="dc60b87d720cd2669f3e2e1659d904b383149c40"
_build_version="1.11"
DEF_VERSION="${_build_version}.1"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_REQUIREMENTS="m4 make perl autoconf libtool texinfo"
DEF_EXPORTS="automake aclocal autoconf autoheader autom4te autoreconf autoscan autoupdate ifnames libtool libtoolize glibtoolize makeinfo texi2any texi2dvi texi2pdf texindex"
DEF_CLEAN_USELESS=NO
DEF_NO_TRAP_INT_OVERFLOW=YES
DEF_MAKE_METHOD="make -s"
DEF_INSTALL_METHOD="make -s install; true"
DEF_AFTER_UNPACK_METHOD="after_unpack"
after_unpack () {
    try "${FETCH_BIN} ${MAIN_SOURCE_REPOSITORY}/Thread-Queue-3.12.tar.gz ${FETCH_OPTS}"
    try "${TAR_BIN} xf Thread-Queue-3.12.tar.gz"
    cd Thread-Queue-3.12
    try "${PREFIX}/bin/perl Makefile.PL"
    try "${PREFIX}/bin/make"
    run "${PREFIX}/bin/make install"
}
DEF_AFTER_CONFIGURE_METHOD="after_configure"
after_configure () {
    try "${SED_BIN} -i '' -e 's#\$(PERL) $(srcdir)/doc/help2man --output=\$@#true#g' Makefile"
}
