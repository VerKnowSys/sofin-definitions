DEF_FULL_NAME="SSH 2 library"
DEF_NAME="libssh2"
DEF_VERSION="1.11.0"
DEF_SHA="aabc37aa5cf065a1f8e0858e4f78e4ffe1db6cce"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.xz"
DEF_ORIGIN="https://www.libssh2.org/download/${DEF_NAME}-${DEF_VERSION}.tar.xz"
DEF_CONFIGURE_METHOD="cmake"
DEF_CONFIGURE_ARGS="-DBUILD_STATIC_LIBS=OFF -DBUILD_SHARED_LIBS=ON -DENABLE_ZLIB_COMPRESSION=ON -DBUILD_TESTING=OFF -DBUILD_EXAMPLES=OFF"

case "${SYSTEM_NAME}-${SYSTEM_VERSION}" in
    FreeBSD-11*|FreeBSD-12*)
        unset DEF_USE_LTO
        ;;
esac
