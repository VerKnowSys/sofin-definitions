APP_FULL_NAME="NRPE nagios client"
APP_NAME="nrpe"
APP_SHA="45f434758c547c0af516e8b3324717f8dcd100a3"
APP_VERSION="2.15"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="gmake zlib libiconv perl openssl nagios-plugins"
APP_CONFIGURE_ARGS="--enable-ssl --with-ssl=${PREFIX} --with-ssl-inc=${PREFIX}/include --with-ssl-lib=${PREFIX}/lib --disable-command-args --disable-bash-command-substitution"
APP_MAKE_METHOD="gmake all"
APP_INSTALL_METHOD="${CP_BIN} -fR ${CACHE_DIR}cache/${APP_NAME}-${APP_VERSION}-${RUNTIME_SHA}/${APP_NAME}-${APP_VERSION}/src/nrpe ${PREFIX}/bin ; ${CP_BIN} -fR ${CACHE_DIR}cache/${APP_NAME}-${APP_VERSION}-${RUNTIME_SHA}/${APP_NAME}-${APP_VERSION}/src/check_nrpe ${PREFIX}/libexec"
APP_EXPORTS="nrpe"

