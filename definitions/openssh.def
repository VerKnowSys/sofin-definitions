DEF_DISABLE_ON="Darwin"
DEF_STANDALONE=YES
DEF_FULL_NAME="OpenSSH server (built with HPN support)"
DEF_NAME="openssh"
DEF_SHA="70e35d7d6386fe08abbd823b3a12a3ca44ac6d38"
DEF_VERSION="7.2p2"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_CONFIGURE_ARGS="--without-shadow --without-pam --disable-utmp \
    --disable-wtmp --disable-wtmpx --with-lastlog --without-ssh1 \
    --without-xauth --disable-static --without-md5-passwords \
    --with-audit=bsm --with-libedit --enable-shared --with-ssl-engine \
    --with-pie --with-mantype=man --with-hpn --with-sctp \
    --with-kerberos5=${PREFIX} \
    --with-ssl-dir=${PREFIX} --with-zlib=${PREFIX} \
    --with-pid-dir=${SERVICE_DIR}/var/run/openssh.pid \
"
DEF_REQUIREMENTS="pkgconf make m4 yasm libtool zlib bzip2 xz libressl libnet db perl krb"
DEF_EXPORTS="ssh sshd scp sftp ssh-add ssh-agent ssh-keygen ssh-keyscan sftp-server ssh-keysign ssh-pkcs11-helper"
DEF_AFTER_INSTALL_METHOD="after_install"
after_install () {
    try "${TEST_BIN} -d ${SERVICE_DIR}/etc" || \
        try "${MKDIR_BIN} -p ${SERVICE_DIR}/etc"
    try "${TEST_BIN} -f ${SERVICE_DIR}/etc/ssh_config" || \
        try "${PRINTF_BIN} 'Host *.verknowsys.com verknowsys.com\nPort 60022\n' >> ${SERVICE_DIR}/etc/ssh_config"
}
DEF_USELESS="lib/*perl* docs share/examples share/aclocal"
DEF_COMPILER_ARGS="-DHPN -DSCTP -DLIBEDIT -DBSM"
DEF_NO_GOLDEN_LINKER=YES
DEF_INSTALL_METHOD="make -s install"
