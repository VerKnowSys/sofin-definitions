APP_FULL_NAME="PHP"
APP_SHA="6e9e492c6d5853d063ddb9a4dbef60b8e5d87444"
APP_NAME="php"
APP_VERSION="5.3.29"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.bz2"
APP_CONFIGURE_SCRIPT="LD_LIBRARY_PATH=${PREFIX}/lib:/usr/lib:/lib LDFLAGS=-L${PREFIX}/lib:/usr/lib:/lib CC=/usr/bin/clang CXX=/usr/bin/clang++ ./configure"
APP_CONFIGURE_ARGS="--disable-all --with-libdir=${PREFIX}/lib --with-layout=PHP --with-libxml-dir=${PREFIX} --with-pcre-dir=${PREFIX} --with-zlib-dir=${PREFIX} --with-gettext=${PREFIX} --with-gd --with-png-dir=${PREFIX} --with-jpeg-dir=${PREFIX} --enable-exif --enable-zend-multibyte --enable-zip --enable-mysqlnd --without-apache --disable-debug --disable-ipv6 --enable-fpm --enable-sockets --enable-soap --enable-json --enable-libxml --enable-dom --enable-cli --enable-session --enable-hash --enable-simplexml --enable-xml --enable-filter --enable-pdo --with-pdo-mysql=${PREFIX} --enable-mbstring --enable-fileinfo --without-openssl --enable-intl --with-mcrypt=${PREFIX} --with-mysql=mysqlnd"
if [ "${SYSTEM_NAME}" = "Linux" ]; then
  export APP_CONFIGURE_ARGS="${APP_CONFIGURE_ARGS} --with-iconv"
else
  export APP_CONFIGURE_ARGS="${APP_CONFIGURE_ARGS} --with-iconv-dir=${PREFIX}"
fi
APP_REQUIREMENTS="gmake perl libiconv gettext pkgconf zlib bzip2 m4 bison libxml2 pcre libexif libpng jpeg freetype fontconfig gd expat cmake ncurses mysql icu libmcrypt"
APP_EXPORTS="php php-fpm php-config phpize"
APP_CONFLICTS_WITH="Php-postgresql"
