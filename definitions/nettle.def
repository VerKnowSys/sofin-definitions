DEF_FULL_NAME="Low-level cryptographic library"
DEF_NAME="nettle"
DEF_VERSION="3.6"
DEF_SHA="22e48a4d232ccd26ba8303709f2222b422a8827d"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_ORIGIN="https://ftp.gnu.org/gnu/${DEF_NAME}/${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_REQUIREMENTS="bzip2 zlib make m4 gmp"
if [ "${SYSTEM_ARCH}" = "arm" ]; then
    DEF_CONFIGURE_ARGS="--enable-shared --disable-assembler"
else
    DEF_CONFIGURE_ARGS="--enable-shared"
fi
DEF_EXPORTS="${DEF_NAME}-hash ${DEF_NAME}-lfib-stream"
DEF_INSTALL_METHOD="make -s install"

case "${SYSTEM_NAME}-${SYSTEM_VERSION}" in
    FreeBSD-11*)
        unset DEF_USE_LTO
        ;;
esac
