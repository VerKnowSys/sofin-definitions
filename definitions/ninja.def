DEF_FULL_NAME="Ninja build system"
DEF_SHA="556ed5f8ee49753af1cf4b0ab2315d39d1954d58"
DEF_NAME="ninja"
DEF_VERSION="1.7.1"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_REQUIREMENTS="expat zlib bzip2 python35"
DEF_CONFIGURE_METHOD="ignore"
DEF_MAKE_METHOD="true"
DEF_INSTALL_METHOD="${PREFIX}/bin/python3 ./configure.py --bootstrap && ${INSTALL_BIN} -v ./ninja ${PREFIX}/bin/ninja"
DEF_EXPORTS="ninja"
DEF_AFTER_PATCH_METHOD="patch_hardcodes"
patch_hardcodes () {
    ${SED_BIN} -i '' -e "s|g++|${CXX_COMPILER_NAME}|g; s|\$cxx|${CXX_COMPILER_NAME}|g; s|crs|ar -rc|g;" configure.py
}
