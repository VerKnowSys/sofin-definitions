DEF_FULL_NAME="Boost - C++ Libraries"
DEF_NAME="boost"
DEF_SHA="b6b284acde2ad7ed49b44e856955d7b1ea4e9459"
DEF_VERSION="1.66.0"
_major_ver="${DEF_VERSION%.*}"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}_${_major_ver%%.*}_${_major_ver#*.}_${DEF_VERSION##*.}.tar.bz2"
DEF_REQUIREMENTS="pkgconf make zlib xz lzma gdbm db sqlite bzip2 yaml libffi libressl python27 icu"
DEF_CONFIGURE_METHOD="CC=cc CXX=clang++ ./bootstrap.sh"
case "${SYSTEM_NAME}" in
    Darwin)
        DEF_CONFIGURE_ARGS="--with-toolset=darwin"
        ;;

    FreeBSD)
        DEF_CONFIGURE_ARGS="--with-toolset=clang"
        ;;
esac
DEF_CONFIGURE_ARGS="${DEF_CONFIGURE_ARGS} --with-python-root=${PREFIX} --with-python=${PREFIX} --with-icu=${PREFIX} --libdir=${PREFIX}/lib --includedir=${PREFIX}/include --without-libraries=python,mpi,wave,graph,graph_parallel,locale,type_erasure,test"
DEF_MAKE_METHOD="true"
DEF_INSTALL_METHOD="cflags='${CFLAGS}' cxxflags='${CXXFLAGS}' ./b2 -j${CPUS} variant=release threading=multi link=shared runtime-link=shared optimization=speed inlining=full pch=off install"
DEF_USELESS="include/python* lib/python*"
