DISABLE_ON="Linux Darwin"
APP_FULL_NAME="Glusterfs"
APP_SHA="e611726b87f55e91041d4e8e6aa8c50e861f0957"
APP_NAME="glusterfs"
APP_VERSION="3.7.6"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="pkgconf gmake zlib libiconv readline m4 perl libgpg-error libgcrypt libxml2 libressl flex bison autoconf libtool automake python27 userspace-rcu sqlite rsync "
APP_CONFIGURE_SCRIPT="./autogen.sh ; ./configure"
APP_CONFIGURE_ARGS="--disable-fuse-client --disable-fusermount --disable-glupy --disable-cmocka --disable-epoll --disable-bd-xlator --disable-ibverbs --disable-qemu-block --disable-firewalld --disable-systemtap --enable-georeplication"
APP_MAKE_COMMAND="make -D__STDC__ -DHAVE_LIB_XML ${MAKE_OPTS}"
APP_EXPORTS="gfind_missing_files gcron.py gluster glusterd glusterfs glusterfsd snap_scheduler.py umountd glusterfind"
APP_USEFUL="bin/python* bin/rsync bin/sqlite3"
