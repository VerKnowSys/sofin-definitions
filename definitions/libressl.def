DEF_DISABLE_ON="Minix"
DEF_FULL_NAME="LibreSSL Library"
DEF_SHA="8736db83be074384e05be842531b6ccaa3d985ff"
DEF_NAME="libressl"
DEF_VERSION="2.7.2"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_EXPORTS="openssl"
DEF_ORIGIN="https://ftp.openbsd.org/pub/OpenBSD/LibreSSL"
DEF_STANDALONE=YES
DEF_AFTER_INSTALL_METHOD="fetch_ca_cert"
fetch_ca_cert () {
    if [ ! -f "${SERVICE_DIR}/etc/ssl/cert.pem" ]; then
        run "${MKDIR_BIN} -p ${SERVICE_DIR}/etc/ssl" && \
        run "${FETCH_BIN} -o ${SERVICE_DIR}/etc/ssl/cert.pem ${FETCH_OPTS} ${MAIN_SOURCE_REPOSITORY}cacert.pem"
    fi
}
