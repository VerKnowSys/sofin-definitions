APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-v${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="zlib bzip2 gmake python-legacy libexecinfo"
APP_AFTER_INSTALL_CALLBACK="npm install -g coffee-script@1.4.0 less uglify-js nodemon"
