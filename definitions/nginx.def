DEF_FULL_NAME="Nginx Standalone"
DEF_STANDALONE=YES
DEF_NAME="nginx"
DEF_SHA="77ce4d26481b62f7a9d83e399454df0912f01a4b"
DEF_VERSION="1.16.1"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_ORIGIN="http://nginx.org/download/${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_REQUIREMENTS="pcre openssl geoip"
DEF_CONFIGURE_ARGS="--without-poll_module --without-select_module --with-compat --with-pcre --with-threads --with-http_ssl_module --with-http_gzip_static_module --with-http_gunzip_module --with-http_geoip_module --with-stream --with-stream_realip_module --with-stream_ssl_module --with-stream_geoip_module --with-stream_ssl_preread_module --without-http_scgi_module --without-http_uwsgi_module --with-http_slice_module --with-http_secure_link_module --with-http_auth_request_module --with-http_addition_module --with-http_degradation_module --with-http_random_index_module --with-http_v2_module --with-http_realip_module --with-http_addition_module --with-http_stub_status_module --without-mail_pop3_module --without-mail_imap_module --without-mail_smtp_module --modules-path=${PREFIX}/modules"
DEF_USELESS="lib/*.a lib/*.sh lib/cmake lib/pkgconfig include bin share man"

DEF_AFTER_UNPACK_METHOD="patch_modules_after_unpack"
patch_modules_after_unpack () {
    ${SED_BIN} \
        -i '' \
        -e "s#/usr/local#${PREFIX}#g" \
            auto/lib/geoip/conf \
            auto/lib/pcre/conf \
            auto/lib/zlib/conf
}

_paths_override_svdos="--build=VerKnowSys \
    --error-log-path=${SERVICE_DIR}/logs/error.log \
    --http-log-path=${SERVICE_DIR}/logs/access.log \
    --pid-path=${SERVICE_DIR}/service.pid \
    --lock-path=${SERVICE_DIR}/service.lock \
    --conf-path=${SERVICE_DIR}/service.conf \
    --http-proxy-temp-path=${SERVICE_DIR}/proxy \
    --http-client-body-temp-path=${SERVICE_DIR}/body \
    --http-fastcgi-temp-path=${SERVICE_DIR}/fcgi \
"
_common_args="--with-cc-opt='${CFLAGS}' --with-ld-opt='${LDFLAGS} -Wl,-rpath=${PREFIX}/lib,--enable-new-dtags'"
case "${SYSTEM_NAME}" in
    Darwin)
        DEF_CONFIGURE_ARGS="${DEF_CONFIGURE_ARGS} --user=${USER:-nobody} --group=staff ${_paths_override_svdos}"
        ;;

    Linux)
        DEF_CONFIGURE_ARGS="${DEF_CONFIGURE_ARGS} --user=www-data --group=www-data --with-file-aio --with-openssl=${PREFIX} --with-zlib=${PREFIX} ${_common_args}"
        ;;

    *)
        DEF_CONFIGURE_ARGS="${DEF_CONFIGURE_ARGS} --with-file-aio --user=www --group=www ${_common_args} ${_paths_override_svdos}"
        ;;
esac

DEF_MAKE_METHOD="OPENSSL=${PREFIX} && make ${MAKE_OPTS}"
DEF_AFTER_MAKE_METHOD="create_service_dirs"
create_service_dirs () {
    for _pref in /proxy /body /body /fcgi /logs; do
        ${MKDIR_BIN} -p "${SERVICE_DIR}${_pref}"
    done
    unset _pref
}

DEF_EXPORTS="nginx"
DEF_CONFLICTS_WITH="Httpd"
unset DEF_USE_LTO
