APP_FULL_NAME="Nginx Standalone"
APP_NAME="nginx"
APP_SHA="00eed38652d2cee36cc91a395f6703584658bb23"
APP_VERSION="1.6.0"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="libiconv zlib pcre perl openssl"
if [ "${SYSTEM_NAME}" != "Darwin" ]; then
    export ADDITION=" -Wl,-rpath=${PREFIX}/lib,--enable-new-dtags"
fi
APP_CONFIGURE_ARGS="--with-poll_module --without-select_module --with-http_spdy_module --with-http_ssl_module --with-http_gzip_static_module --with-http_gunzip_module  --user=nobody --group=nogroup --with-cc-opt='-I${PREFIX}/include' --with-ld-opt='-L${PREFIX}/lib${ADDITION}'" # --with-openssl=${PREFIX} --with-zlib=${PREFIX}
APP_EXPORTS="nginx"
APP_CONFLICTS_WITH="Passenger Nginx"
