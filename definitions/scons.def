APP_FULL_NAME="Scons"
APP_NAME="scons"
APP_SHA="7bb1c755610613d9dab71bd56267fd1f531a2f97"
APP_VERSION="2.3.3"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_CONFIGURE_SCRIPT="ignore"
APP_INSTALL_METHOD="true"
APP_EXPORTS="scons"
if [ "${SYSTEM_NAME}" = "Darwin" ]; then
    APP_MAKE_METHOD="/usr/bin/python setup.py install --prefix=${PREFIX} --standalone-lib --no-version-script --no-install-man"
else
    APP_REQUIREMENTS="python-legacy"
    APP_CONFIGURE_SCRIPT="LD_LIBRARY_PATH=${PREFIX}/lib:/usr/lib ${PREFIX}/bin/python ./configure"
fi
