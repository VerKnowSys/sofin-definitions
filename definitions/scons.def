APP_FULL_NAME="Scons"
APP_NAME="scons"
APP_SHA="7bb1c755610613d9dab71bd56267fd1f531a2f97"
APP_VERSION="2.3.3"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_CONFIGURE_SCRIPT="ignore"
APP_INSTALL_METHOD="true"
APP_EXPORTS="scons"
SETUP="setup.py install --prefix=${PREFIX} --standalone-lib --no-version-script --no-install-man"
if [ "${SYSTEM_NAME}" = "Darwin" ]; then
    APP_MAKE_METHOD="/usr/bin/python ${SETUP}"
else
    APP_REQUIREMENTS="python27"
    APP_MAKE_METHOD="${PREFIX}/bin/python ${SETUP}"
fi
