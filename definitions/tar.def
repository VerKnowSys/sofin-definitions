DEF_FULL_NAME="GNU Tar"
DEF_NAME="tar"
DEF_VERSION="1.35"
DEF_SHA="6b9824c92deddbd7021801515270211f5252fbd8"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.xz"
DEF_ORIGIN="https://ftp.gnu.org/gnu/${DEF_NAME}/${DEF_NAME}-${DEF_VERSION}.tar.xz"
DEF_EXPORTS="${DEF_NAME}"
DEF_AFTER_UNPACK_METHOD="export FORCE_UNSAFE_CONFIGURE=1"
DEF_LINKER_FLAGS="${DEF_LINKER_FLAGS} -liconv"

case "${SYSTEM_NAME}-${SYSTEM_VERSION}" in
    FreeBSD-11*)
        unset DEF_USE_LTO
        ;;

    Darwin-*)
        DEF_REQUIREMENTS="libiconv"
        unset DEF_USE_LTO
        ;;
esac
