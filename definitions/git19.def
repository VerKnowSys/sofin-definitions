DISABLE_ON="FreeBSD"
APP_FULL_NAME="Git SCM"
APP_SHA="44e59fb9f5f8ac34d4db4430285be64a42d4cdd6"
APP_NAME="git"
APP_VERSION="1.9.0"
APP_POSTFIX="19"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.xz"
commons="--with-expat --with-curl --without-tcltk --with-zlib --without-python"
APP_CONFIGURE_ARGS="${commons} --with-perl=${PREFIX}/bin/perl"
APP_REQUIREMENTS="gmake zlib libiconv expat perl bzip2 openssl curl"
case "${SYSTEM_NAME}" in
  Darwin)
    export APP_CONFIGURE_ARGS="${commons} --with-perl=/usr/bin/perl"
    ;;
esac
APP_MAKE_METHOD="gmake -s ${MAKE_OPTS}"
APP_INSTALL_METHOD="gmake install -s ${MAKE_OPTS}"
FORCE_GNU_COMPILER="true"
APP_EXPORTS="git git-cvsserver git-receive-pack git-shell git-upload-archive git-upload-pack"
