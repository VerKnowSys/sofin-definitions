DEF_FULL_NAME="GNU Midnight Commander File Manager"
DEF_NAME="mc"
DEF_GIT_CHECKOUT="4.8.19"
DEF_VERSION="${DEF_GIT_CHECKOUT}"
DEF_SOURCE_PATH="https://github.com/MidnightCommander/${DEF_NAME}.git"
DEF_REQUIREMENTS="pkgconf make m4 libtool zlib bzip2 lzma xz pcre perl gettext autoconf automake libffi libressl python35 glib slang libssh2"
DEF_AFTER_PATCH_METHOD="autoconf; sh ./autogen.sh"
DEF_CONFIGURE_ARGS="--with-screen=ncurses --with-slang-includes=${PREFIX}/include --with-slang-libs=${PREFIX}/lib --with-pcre=${PREFIX} --disable-doxygen-man --disable-doxygen-html --disable-doxygen-doc --disable-doxygen-dot --enable-charset --disable-aspell --with-subshell --disable-assert --without-internal-edit --with-diff-viewer --without-x"
DEF_EXPORTS="${DEF_NAME} ${DEF_NAME}view ${DEF_NAME}edit ${DEF_NAME}diff"
DEF_USELESS="lib/*perl* lib/*python* share/bash-completion share/gdb share/gettext* share/glib* share/*doc* share/info share/slsh share/libtool man lib/*.{la,a} lib/glib-2.0 share/ac* share/auto* share/emacs include"
DEF_NO_SAFE_STACK=YES
DEF_NO_LLVM_LINKER=YES
