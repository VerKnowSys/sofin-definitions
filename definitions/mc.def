APP_FULL_NAME="GNU Midnight Commander File Manager"
APP_NAME="mc"
APP_SHA="c450a04a2a7f4941ac4865d8224c0232a5281046"
APP_VERSION="4.8.16"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.xz"
APP_REQUIREMENTS="gmake zlib bzip2 pkgconf libffi libiconv gettext libressl python27 m4 libtool glib243 slang pcre perl"
APP_CONFIGURE_ARGS="--with-pcre=${PREFIX} --with-slang-libs=${PREFIX}/lib --disable-doxygen-man --disable-doxygen-html --disable-doxygen-doc --disable-doxygen-dot --with-internal-edit --with-diff-viewer"
APP_EXPORTS="mc mcview mcedit mcdiff"
APP_USELESS="lib/*perl* include/*python* lib/*python* share/bash-completion share/gdb share/gettext* share/glib* share/*doc* share/info share/slsh share/man share/libtool man"
if [ "${SYSTEM_NAME}" = "Linux" ]; then
    APP_REQUIREMENTS="$(echo "${APP_REQUIREMENTS}" | ${SED_BIN} -e 's/243/240/')"
fi
