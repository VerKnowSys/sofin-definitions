DEF_FULL_NAME="GNU Midnight Commander File Manager"
DEF_NAME="mc"
DEF_SHA="f6a080a6ce6523f308e2530e839e0156be70cdc6"
DEF_VERSION="4.8.17"
DEF_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.xz"
DEF_REQUIREMENTS="gmake zlib bzip2 pkgconf libffi libiconv gettext libressl python27 m4 libtool glib slang pcre perl"
DEF_CONFIGURE_ARGS="--with-pcre=${PREFIX} --with-slang-libs=${PREFIX}/lib --disable-doxygen-man --disable-doxygen-html --disable-doxygen-doc --disable-doxygen-dot --with-internal-edit --with-diff-viewer"
DEF_EXPORTS="mc mcview mcedit mcdiff"
DEF_USELESS="lib/*perl* include/*python* lib/*python* share/bash-completion share/gdb share/gettext* share/glib* share/*doc* share/info share/slsh share/man share/libtool man"
if [ "${SYSTEM_NAME}" = "Linux" ]; then
    DEF_REQUIREMENTS="$(echo "${APP_REQUIREMENTS}" | ${SED_BIN} -e 's/243/240/')"
fi
