DEF_FULL_NAME="GNU Midnight Commander File Manager"
DEF_NAME="mc"
DEF_ORIGIN="http://ftp.midnight-commander.org"
DEF_VERSION="4.8.19"
DEF_SHA="850747ae43a5c81f1dd0d906dfa9e149eb19748a"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.xz"
DEF_REQUIREMENTS="pkgconf make m4 libtool lzma xz lzo lzop lz4 zip expat gettext readline yaml libffi perl openssl autoconf texinfo automake python27 libssh2 pcre icu glib"
DEF_STANDALONE=YES
DEF_CONFIGURE_ARGS="--with-screen=ncurses --with-pcre=${PREFIX} --disable-doxygen-man --disable-doxygen-html --disable-doxygen-doc --disable-doxygen-dot --enable-charset --disable-aspell --with-subshell --disable-assert --without-internal-edit --with-diff-viewer --without-x --without-slang"
DEF_EXPORTS="${DEF_NAME} ${DEF_NAME}view ${DEF_NAME}edit ${DEF_NAME}diff"
DEF_USELESS="lib/*perl* lib/*python* share/bash-completion share/gdb share/gettext* share/glib* share/*doc* share/info share/slsh share/libtool man lib/*.{la,a} lib/glib-2.0 share/ac* share/auto* share/emacs include"
