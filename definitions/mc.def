DEF_FULL_NAME="GNU Midnight Commander File Manager"
DEF_NAME="mc"
DEF_SHA="f6a080a6ce6523f308e2530e839e0156be70cdc6"
DEF_VERSION="4.8.17"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.xz"
DEF_REQUIREMENTS="pkgconf make m4 libtool perl pcre gettext zlib bzip2 xz libffi libressl python27 glib slang"
DEF_CONFIGURE_ARGS="--with-pcre=${PREFIX} --with-slang-libs=${PREFIX}/lib --disable-doxygen-man --disable-doxygen-html --disable-doxygen-doc --disable-doxygen-dot --enable-charset --disable-background --disable-aspell --with-subshell --disable-assert --without-internal-edit --with-diff-viewer --without-x"
DEF_EXPORTS="mc mcview mcedit mcdiff"
DEF_USELESS="lib/*perl* include/*python* lib/*python* share/bash-completion share/gdb share/gettext* share/glib* share/*doc* share/info share/slsh share/libtool man"
