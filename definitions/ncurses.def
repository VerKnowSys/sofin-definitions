DEF_FULL_NAME="GNU NCurses Terminfo Library with utilities"
DEF_NAME="ncurses"
DEF_VERSION="6.2"
DEF_SHA="56e410fb77f2b5501a0b2f6a995376f3cefe1097"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_CONFIGURE_ARGS="--enable-relink --enable-pc-files --sysconfdir=${SERVICE_DIR}/etc --without-ada --with-shared --with-cxx-shared --without-static --enable-sigwinch --enable-tcap-names --enable-wgetch-events --without-debug --enable-ext-colors --enable-getcap --enable-symlinks  --enable-rpath --enable-widec --enable-bsdpad --enable-termcap --disable-overwrite --disable-root-environ --with-manpages --with-manpage-format=normal --without-manpage-renames --without-tests --enable-term-driver --with-pthread --enable-const --with-hashed-db --with-rcs-ids --enable-getcap-cache --with-termpath=/usr/share/misc/termcap CC= CXX= LD= LDFLAGS= CFLAGS= CXXFLAGS="
DEF_REQUIREMENTS="pkgconf"
DEF_MAKE_METHOD="locale_cleanup_and_build"
locale_cleanup_and_build () {
    env  \
        CC="cc" \
        LD="ld.lld" \
        CXX="c++" \
        LANG="en_GB.UTF-8" \
        LC_ALL="${LANG}" \
        LC_COLLATE="${LANG}" \
        LC_CTYPE="${LANG}" \
        LC_MESSAGES="${LANG}" \
        LC_MONETARY="" \
        LC_NUMERIC="" \
        LC_TIME="" \
        make -s -j${CPUS}
}

DEF_INSTALL_METHOD="install_ncurses_lib"
install_ncurses_lib () {
    env \
        LANG="en_GB.UTF-8" \
        make install install.libs install.includes install.man
}

DEF_EXPORTS="tput tset tic toe reset infocmp clear infotocap ncursesw6-config tabs captoinfo"

unset DEF_CLEAN_USELESS
unset DEF_NO_FAST_MATH
unset DEF_NO_TRAP_INT_OVERFLOW
unset DEF_NO_LLVM_LINKER
