DEF_DISABLE_ON="Linux Darwin"
DEF_STANDALONE="true"
DEF_FULL_NAME="Syslog-ng - an enhanced log daemon"
DEF_NAME="syslog-ng"
DEF_SHA="53b14cae037a5ca996fd7b67cf16d29970afedf9"
DEF_VERSION="3.6.4"
DEF_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}_${DEF_VERSION}.tar.gz"
DEF_CONFIGURE_ARGS="--enable-ipv6 --enable-geoip --enable-ssl --enable-json --enable-dynamic-linking --disable-linux-caps --enable-spoof-source --with-libnet=${PREFIX} --datadir=${PREFIX}/share/syslog-ng/"
DEF_REQUIREMENTS="pkgconf eventlog gmake zlib pcre libffi gettext python27 m4 libtool flex perl bison27 autoconf automake json-c libressl geoip libnet glib249"
DEF_MAKE_METHOD="gmake -s"
DEF_INSTALL_METHOD="gmake install -s"
DEF_EXPORTS="syslog-ng syslog-ng-ctl"
DEF_USELESS="lib/python* lib/libffi* lib/glib* share/aclocal* share/doc lib/*perl* share/bison share/autoconf* share/automake* share/gettext* share/libtool"
DEF_AFTER_PATCH_CALLBACK="patch_libnet_detect"
patch_libnet_detect () {
    ${SED_BIN} -i '' -e 's:libnet-config:libnet11-config:g' ./configure
}
export RANLIB="/usr/bin/true"
