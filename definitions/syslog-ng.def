DISABLE_ON="Linux Darwin"
APP_STANDALONE="true"
APP_FULL_NAME="Syslog-ng - an enhanced log daemon"
APP_NAME="syslog-ng"
APP_SHA="53b14cae037a5ca996fd7b67cf16d29970afedf9"
APP_VERSION="3.6.4"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}_${APP_VERSION}.tar.gz"
APP_CONFIGURE_ARGS="--enable-ipv6 --enable-geoip --enable-ssl --enable-json --enable-dynamic-linking --disable-linux-caps --enable-spoof-source --with-libnet=${PREFIX} --datadir=${PREFIX}/share/syslog-ng/"
APP_REQUIREMENTS="pkgconf eventlog gmake zlib pcre libffi gettext python27 m4 libtool flex perl bison27 autoconf automake json-c libressl geoip libnet glib249"
APP_MAKE_METHOD="gmake -s"
APP_INSTALL_METHOD="gmake install -s"
APP_EXPORTS="syslog-ng syslog-ng-ctl"
APP_USELESS="lib/python* lib/libffi* lib/glib* share/aclocal* share/doc lib/*perl* share/bison share/autoconf* share/automake* share/gettext* share/libtool"
APP_AFTER_PATCH_CALLBACK="patch_libnet_detect"
patch_libnet_detect () {
    ${SED_BIN} -i '' -e 's:libnet-config:libnet11-config:g' ./configure
}
export RANLIB="/usr/bin/true"
