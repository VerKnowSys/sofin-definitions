DEF_FULL_NAME="ClamAV"
DEF_STANDALONE=YES
DEF_NAME="clamav"
DEF_SHA="6bf12862f09c80b7efc9e00b030ffb43db95ac82"
DEF_VERSION="0.100.0"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_REQUIREMENTS="pkgconf make m4 zlib xz lzo lz4 zip pcre libressl libffi libxml2 python27 curl-minimal"
DEF_CONFIGURE_ARGS="--with-zlib=${PREFIX} --with-libcurl=${PREFIX} --with-pcre=${PREFIX} --with-xml=${PREFIX} --with-openssl=${PREFIX} --enable-bigstack --enable-clamdtop"
DEF_EXPORTS="clamav-config clamconf clamdtop clamsubmit clambc clamd freshclam clamdscan clamscan sigtool"
DEF_USELESS="lib/python* share/info share/man lib/*perl* lib/cmake share/texinfo include/python*"
DEF_USE_SAFE_STACK=YES
