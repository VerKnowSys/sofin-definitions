DEF_FULL_NAME="ClamAV"
DEF_STANDALONE="true"
DEF_NAME="clamav"
DEF_SHA="c1a47411834d8527f7b40727aebee63f01d488af"
DEF_VERSION="0.99.2"
DEF_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
DEF_REQUIREMENTS="gmake zlib xz pcre perl openssl python27 libxml2 texinfo libidn curl"
DEF_CONFIGURE_ARGS="--with-zlib=${PREFIX} --with-libcurl=${PREFIX} --with-pcre=${PREFIX} --with-xml=${PREFIX} --with-openssl=${PREFIX} --enable-llvm --enable-bigstack --enable-clamdtop"
