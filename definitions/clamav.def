APP_FULL_NAME="ClamAV"
APP_STANDALONE="true"
APP_NAME="clamav"
APP_SHA="c1a47411834d8527f7b40727aebee63f01d488af"
APP_VERSION="0.99.2"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="gmake zlib xz pcre perl openssl python27 libxml2 texinfo libidn curl"
APP_CONFIGURE_ARGS="--with-zlib=${PREFIX} --with-libcurl=${PREFIX} --with-pcre=${PREFIX} --with-xml=${PREFIX} --with-openssl=${PREFIX} --enable-llvm --enable-bigstack --enable-clamdtop"
APP_EXPORTS="clamav-config clamconf clamdtop clamsubmit clambc clamd freshclam clamdscan clamscan sigtool"
APP_USELESS="lib/python* share/info share/man lib/*perl* lib/cmake share/texinfo include/python*"
