DEF_FULL_NAME="Open source antivirus engine for detecting trojans, viruses, malware & other malicious threats."
DEF_STANDALONE=YES
DEF_NAME="clamav"
DEF_VERSION="0.102.1"
DEF_SHA="88040368d506b923b627eab3c8a96c941f1719f9"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_ORIGIN="https://www.clamav.net/downloads/production/${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_REQUIREMENTS="pkgconf-static pcre libressl libxml2 python27-static libidn2 curl-dynamic json-c"
DEF_CONFIGURE_ARGS="--with-zlib=${PREFIX} --with-libcurl=${PREFIX} --with-pcre=${PREFIX} --with-xml=${PREFIX} --with-openssl=${PREFIX} --with-libjson=${PREFIX} --enable-xml --enable-pcre --enable-libjson --enable-bigstack --enable-clamdtop --enable-experimental"
DEF_EXPORTS="clamav-config clamconf clamdtop clamsubmit clambc clamd freshclam clamdscan clamscan sigtool"
DEF_USELESS="share/info share/man lib/cmake lib/*.{a,la} share/texinfo include"
