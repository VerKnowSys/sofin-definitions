DEF_FULL_NAME="Racket - Lisp/Scheme dialect that support objects, types, laziness, and more."
DEF_SHA="9e543bed0bda5c197d8ade41062d19db010099e6"
DEF_NAME="racket"
DEF_VERSION="6.8"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}-src.tgz"
DEF_REQUIREMENTS="pkgconf make m4 libtool zlib bzip2 xz sqlite gettext pcre expat libffi python35 jbig2dec jbigkit nasm libjpeg-turbo freetype fontconfig jpeg tiff libpng glib pixman libressl libssh2 spdylay nghttp2 curl cmake graphite2 harfbuzz cairo perl pango"
DEF_CONFIGURE_ARGS="--enable-lt=${PREFIX}/bin/libtool --enable-libffi --enable-futures --enable-places --enable-foreign --enable-extflonum --enable-backtrace --disable-docs --disable-static --enable-shared"
DEF_COMPILER_ARGS="-I${PREFIX}/include"
DEF_MAKE_METHOD="make ${MAKE_OPTS}"
DEF_INSTALL_METHOD="make install"
DEF_EXPORTS="racket raco raco drracket plt-games mzc setup-plt mzpp mztext plt-r5rs plt-r6rs scribble slatex pdf-slatex slideshow swindle plt-web-server gracket-text"
DEF_BUILD_DIR_SUFFIX="src"
DEF_USEFUL="bin/racket* bin/gracket* bin/raco*"
DEF_USELESS="lib/*python* lib/perl* docs share/gtk-doc"
