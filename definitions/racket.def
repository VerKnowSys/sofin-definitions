DEF_FULL_NAME="Racket - Lisp/Scheme dialect that support objects, types, laziness, and more."
DEF_SHA="67dc3a111600322585018c95895fe6c1bf21aaa5"
DEF_NAME="racket"
DEF_VERSION="6.6"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}-src.tgz"
DEF_BUILD_DIR_POSTFIX="src"
DEF_REQUIREMENTS="pkgconf make m4 libtool zlib bzip2 xz sqlite gdbm db gettext pcre expat libffi python27 jbig2dec jbigkit nasm libjpeg-turbo freetype fontconfig jpeg tiff libpng glib pixman harfbuzz cairo perl pango"
DEF_CONFIGURE_ARGS="--enable-pkgscope=installation --enable-lt=${PREFIX}/bin/libtool --enable-libffi --enable-futures --enable-places --enable-foreign --enable-extflonum --enable-backtrace --disable-usersetup --disable-gracket --disable-docs --disable-static --enable-shared"
DEF_COMPILER_ARGS="-I${PREFIX}/include"
DEF_MAKE_METHOD="make ${MAKE_OPTS}"
DEF_INSTALL_METHOD="env PLT_SETUP_OPTIONS='-j ${CPUS}' make ${MAKE_OPTS} install"
DEF_EXPORTS="racket raco"
DEF_USELESS="lib/*python* lib/perl*"
