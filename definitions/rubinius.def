APP_FULL_NAME="Rubinius Ruby VM"
APP_SHA="8b6180954ef0078cc2ece46b49afc6db14f2b063"
APP_NAME="rubinius"
APP_VERSION="2.4.1"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.bz2"
#APP_AFTER_INSTALL_CALLBACK="${PRINTF_BIN} 'gem: --no-ri --no-rdoc' > ${HOME}/.gemrc ; ${PREFIX}/bin/gem install rack rake"
APP_REQUIREMENTS="zlib bzip2 libxml2 libiconv gmake libtool libgpg-error libgcrypt libxslt yaml sqlite perl m4 bison openssl ruby"
APP_EXPORTS="ruby rbx gem irb ri rdoc erb rake bundle"
APP_MAKE_METHOD="rake install"
APP_INSTALL_METHOD="true"
APP_NO_CCACHE="YES"
APP_AFTER_UNPACK_CALLBACK="bundle install"
case "${SYSTEM_NAME}" in
  Darwin)
    APP_CONFIGURE_ARGS="--preserve-prefix --disable-llvm --with-rpath"
    ;;
  *)
    APP_CONFIGURE_ARGS="--preserve-prefix --disable-llvm --with-execinfo --with-rpath --with-dtrace"
    ;;
esac
APP_CONFLICTS_WITH="Ruby Jruby Ruby-legacy Ruby-minimal Passenger Ruby18 Ruby19 Ruby20"
