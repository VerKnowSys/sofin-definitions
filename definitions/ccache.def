DEF_FULL_NAME="CCache - C/C++ compiler cache"
DEF_NAME="ccache"
DEF_VERSION="4.8"
DEF_SHA="a9992be50f8b96ff0b110d1a0d9d06eeaa501e13"
DEF_ORIGIN="https://github.com/ccache/ccache/releases/download/v${DEF_VERSION}/${DEF_NAME}-${DEF_VERSION}.tar.xz"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.xz"
DEF_REQUIREMENTS="@zstd"
DEF_CONFIGURE_METHOD="cmake"
case "${SYSTEM_NAME}" in
    Darwin)
        DEF_CONFIGURE_ARGS="-DENABLE_IPO=ON -DREDIS_STORAGE_BACKEND=OFF"
        ;;

    *)
        DEF_CONFIGURE_ARGS="-DENABLE_IPO=ON -DCMAKE_ASM_COMPILER=nasm -DREDIS_STORAGE_BACKEND=OFF"
        ;;
esac
DEF_EXPORTS="${DEF_NAME}"
