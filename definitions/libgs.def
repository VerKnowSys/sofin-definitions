APP_FULL_NAME="Ghostscript library"
APP_NAME="libgs"
APP_SHA="761c9c25b9f5fe01197bd1510f527b3c1b6eb9de"
APP_VERSION="9.18"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}ghostscript-${APP_VERSION}.tar.gz"
APP_CONFIGURE_ARGS="--with-libiconv=native --disable-dbus --disable-compile-inits --with-ijs --with-libidn=${PREFIX} --disable-gtk --disable-contrib --without-luratech --enable-freetype --without-x --enable-cups --with-drivers=BMP,JPEG,PNG,PS,TIFF --enable-threadsafe --with-memory-alignment=8 --without-gnu-make"
APP_REQUIREMENTS="gmake pkgconf zlib bzip2 pth lzma lzo m4 python27 perl autoconf automake libtool bison util-macros cups libxml2 libxslt jbig2dec jbigkit libiconv nasm libjpeg-turbo freetype libpaper xcb-proto libpthread-stubs xproto libXau libxcb xtrans xextproto libX11 libICE libSM kbproto libXt libXext texinfo libidn jpeg tiff lcms2 krb"
APP_COMPILER_ARGS="-DSHARE_LCMS=1 -DUPD_SIGNAL=0 -DA4"
APP_LINKER_ARGS="-L${PREFIX}/lib -lpthread"
APP_CONFIGURE_SCRIPT="./autogen.sh"
APP_MAKE_METHOD="gmake so ${MAKE_FLAGS} AUXEXTRALIBS='-L${PREFIX}/lib -I${PREFIX}/include'"
APP_INSTALL_METHOD="gmake soinstall AUXEXTRALIBS='-L${PREFIX}/lib -I${PREFIX}/include'"
APP_EXPORTS="gif2tiff gsbj gsc gsdj gsdj500 gslj gslp gsnd gsx"
APP_USELESS="include/python2.7 lib/libperl.so lib/perl5 lib/python2.7 man libexec share/man share/aclocal* share/auto* share/cups share/bison share/doc share/examples share/gtk-doc share/texinfo share/emacs share/info share/libtool share/ghostscript/${APP_VERSION}/doc share/ghostscript/${APP_VERSION}/examples"
