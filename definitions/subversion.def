DEF_DISABLE_ON="Darwin"
DEF_FULL_NAME="Subversion - enterprise-class centralized version control for the masses"
DEF_NAME="subversion"
DEF_VERSION="1.13.0"
DEF_SHA="3815a2dcaf976b3b7371f9f5d83e537f8cb359b4"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.bz2"
DEF_ORIGIN="http://ftp.man.poznan.pl/apache/${DEF_NAME}/${DEF_NAME}-${DEF_VERSION}.tar.bz2"
DEF_CONFIGURE_ARGS="--enable-optimize --disable-nls --with-sqlite=${PREFIX} --with-utf8proc=${PREFIX} --with-apr=${PREFIX} --with-apr-util=${PREFIX} --with-zlib=${PREFIX} --with-lz4=${PREFIX} --with-expat=${PREFIX}/include:${PREFIX}/lib:expat --with-utf8proc=internal --with-libmagic=/usr --with-boost=${PREFIX}"
DEF_REQUIREMENTS="zlib lz4 expat db boost apr apr-util sqlite"
DEF_USELESS="lib/*.{a,la} lib/{apr-util-1,pkgconfig} include share/pkgconfig man build-1"
DEF_EXPORTS="svn svnadmin svndumpfilter svnlook svnrdump svnserve svnsync svnversion"
