APP_FULL_NAME="Ruby YARV 2.1"
APP_SHA="9c0a238bd7839a4b51871641945a3da90997b8c2"
APP_NAME="ruby"
APP_VERSION="2.1.5"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.bz2"
APP_CONFIGURE_ARGS="--with-opt-dir=${PREFIX} --with-gcc=/usr/bin/clang --disable-install-doc --disable-install-rdoc --enable-load-relative"
case "${SYSTEM_NAME}" in
    FreeBSD)
        ;;

    Darwin)
        export APP_CONFIGURE_ARGS="${APP_CONFIGURE_ARGS} --enable-shared"
        ;;

    Linux)
        export APP_CONFIGURE_ARGS="${APP_CONFIGURE_ARGS} --enable-shared --with-gcc=/usr/bin/gcc"

  ;;
esac
APP_REQUIREMENTS="zlib bzip2 libiconv libxml2 gmake libtool libgpg-error libgcrypt libxslt yaml libffi sqlite perl openssl readline"
APP_AFTER_INSTALL_CALLBACK="${PRINTF_BIN} 'gem: --no-ri --no-rdoc' > ${HOME}/.gemrc ; ${PREFIX}/bin/gem install bundler rack --force"
APP_EXPORTS="ruby gem irb ri rdoc erb rake bundle rackup"
APP_ORIGIN="http://www.ruby-lang.org/en/downloads/"
APP_MAKE_METHOD="gmake -s ${MAKE_OPTS}"
APP_INSTALL_METHOD="gmake install -s ${MAKE_OPTS}"
APP_CONFLICTS_WITH="Rubinius Jruby Ruby-legacy Ruby-minimal Passenger Ruby18 Ruby19 Ruby20"
