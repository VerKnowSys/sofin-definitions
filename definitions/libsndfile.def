APP_FULL_NAME="Lib sndfile"
APP_SHA="e95d9fca57f7ddace9f197071cbcfb92fa16748e"
APP_NAME="libsndfile"
APP_VERSION="1.0.25"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_CONFIGURE_ARGS="--disable-alsa --disable-static --disable-sqlite"
if [ "${SYSTEM_NAME}" = "Darwin" ]; then
    # issue: configure script can't find "Carbon.h"
    # solution:
    for ver in 11 10 9; do
        if [ -d "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX10.${ver}.sdk/System/Library/Frameworks/Carbon.framework/Versions/A/Headers" ]; then
            APP_COMPILER_ARGS="-I/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX10.11.sdk/System/Library/Frameworks/Carbon.framework/Versions/A/Headers"
            break
        fi
    done
fi
