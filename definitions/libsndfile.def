DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_REQUIREMENTS="libogg libvorbis"
DEF_CONFIGURE_ARGS="--disable-alsa"
if [ "${SYSTEM_NAME}" = "Darwin" ]; then
