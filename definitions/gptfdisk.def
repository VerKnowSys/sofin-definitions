DEF_DISABLE_ON="FreeBSD"
DEF_FULL_NAME="GPT Fdisk"
DEF_NAME="gptfdisk"
DEF_SHA="ad28c511c642235815b83fffddf728c117057cba"
DEF_VERSION="1.0.1"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_CONFIGURE_METHOD="no-conf"
DEF_REQUIREMENTS="popt libuuid"
DEF_EXPORTS="cgdisk fixparts gdisk sgdisk"
DEF_USEFUL="bin/g*"
DEF_AFTER_UNPACK_METHOD="${SED_BIN} -i '' -e 's|-lncursesw|-lncurses|g' Makefile ; true"
DEF_INSTALL_METHOD="install_products"
install_products () {
    ${MKDIR_BIN} -p ${PREFIX}/bin ${PREFIX}/lib
    for _binary in ${DEF_EXPORTS}; do
        ${INSTALL_BIN} -v ${_binary} ${PREFIX}/bin
    done
}
