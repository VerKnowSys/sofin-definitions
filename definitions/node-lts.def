DEF_DISABLE_ON="Linux FreeBSD"
DEF_FULL_NAME="NodeJS LTS"
DEF_NAME="node"
DEF_SUFFIX="-lts"
DEF_VERSION="v6.11.5"
DEF_ORIGIN="http://nodejs.org/download/"
DEF_CONFIGURE_METHOD="binary"
DEF_CLEAN_USELESS=NO
DEF_CONFLICTS_WITH="Node"
DEF_EXPORTS="node npm yarn yarnpkg"
DEF_AFTER_INSTALL_METHOD="after_install"

if [ "${SYSTEM_NAME}" = "Darwin" ]; then
    DEF_SHA="61535b28ccd672929a255f681a2dde87651276ab"
    DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}-darwin-x64.tar.gz"
    DEF_AFTER_UNPACK_METHOD="${CP_BIN} -fR ${BUILD_DIR}/${DEF_NAME}-${DEF_VERSION}-darwin-x64/ ${PREFIX}"
fi

after_install () {
    ${PREFIX}/bin/npm install --global yarn
}
