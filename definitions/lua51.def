DEF_FULL_NAME="Lua"
DEF_NAME="lua"
DEF_VERSION="5.1.5"
DEF_SHA="b3882111ad02ecc6b972f8c1241647905cb2e3fc"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_EXPORTS="lua luac"
DEF_CONFIGURE_METHOD="ignore"
DEF_REQUIREMENTS="readline"
DEF_COMPILER_FLAGS="-fPIC -I${PREFIX}/include"
DEF_LINKER_FLAGS="-lm -pthread -lreadline"

DEF_AFTER_UNPACK_METHOD="patch_makefile"
patch_makefile () {
    ${SED_BIN} -i '' -e 's,rand *(,random(,g' src/lmathlib.c
    ${SED_BIN} -i '' -e "s|/usr/local|${PREFIX}|g;" src/luaconf.h
    ${SED_BIN} -i '' -e "s|gcc|cc|g; s|/usr/local|${PREFIX}|g;" \
        src/Makefile \
        Makefile

    unset _build_flags
}


case "${SYSTEM_NAME}" in
    Linux)
        DEF_MAKE_METHOD="make linux"
        ;;

    Darwin)
        DEF_MAKE_METHOD="make macosx"
        ;;

    *)
        make_all () {
            MYLIBS="-Wl,-E -L${PREFIX}/lib -lreadline -lrt" \
            MYCFLAGS="${CFLAGS} -fPIC -fPIE -I${PREFIX}/include -DLUA_USE_READLINE" \
            MYLDFLAGS="${LDFLAGS} -L${PREFIX}/lib -Wl,-rpath=${PREFIX}/lib,--enable-new-dtags -Wl,-z,notext -fPIC -pie" \
            CC="${CC}" \
            LUA_T=lua \
            LUAC_T=luac \
            LUA_A=liblua.a \
            LUA_SO=liblua.so \
            LUA_SONAME=liblua.so \
            TO_BIN="lua luac" \
            TO_LIB="liblua.a liblua.so" \
            INSTALL_TOP=${PREFIX} \
            INSTALL_INC=${PREFIX}/include/lua \
            INSTALL_EXEC="lua" \
                make posix
        }
        DEF_MAKE_METHOD="make_all"
        ;;
esac

# because Lua guys possibly don't know how to do things correctly:
DEF_AFTER_MAKE_METHOD="create_pc"
create_pc () {
    ${MKDIR_BIN} -p "${PREFIX}/lib/pkgconfig"
    ${SED_BIN} -i '' -e "s#/usr/local#${PREFIX}#" etc/lua.pc
    ${INSTALL_BIN} -v etc/lua.pc "${PREFIX}/lib/pkgconfig/"
}
DEF_INSTALL_METHOD="make -s install"

case "${SYSTEM_NAME}-${SYSTEM_VERSION}" in
    FreeBSD-11*|FreeBSD-12*)
        unset DEF_USE_LTO
        ;;
esac
