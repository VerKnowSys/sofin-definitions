DEF_EXPORTS="python3 python3-config python3.6 python3.6-config easy_install3 pip3 meson"
DEF_USEFUL="bin/pyth* bin/pip* bin/*config bin/easy_install*"
DEF_CONFLICTS_WITH="Python3"
DEF_NO_FAST_MATH=YES
DEF_NO_CCACHE=YES
DEF_NO_TRAP_INT_OVERFLOW=YES
DEF_NO_LTO=YES
