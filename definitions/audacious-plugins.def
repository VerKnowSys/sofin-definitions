DISABLE_ON="Linux FreeBSD"
APP_FULL_NAME="Audacious Plugins"
APP_NAME="audacious-plugins"
APP_VERSION="3.6-devel"
APP_GIT_MODE="true"
APP_GIT_CHECKOUT="master"
APP_HTTP_PATH="git@github.com:audacious-media-player/audacious-plugins.git"
APP_REQUIREMENTS="m4 gmake perl autoconf automake zlib pcre pkgconf libffi gettext python-legacy libtool glib240 sdl flac mpg123 yasm ffmpeg libogg libvorbis audacious-core"
APP_CONFIGURE_SCRIPT="./autogen.sh ; ./configure PKG_CONFIG_PATH=${HOME}/Qt/5.3/clang_64/lib/pkgconfig"
APP_CONFIGURE_ARGS="--enable-qt --enable-qtui --disable-gtk --disable-gtkui --disable-skins --disable-lyricwiki --disable-filewriter --disable-glspectrum --disable-songchange --disable-statusicon --disable-vtx --disable-ladspa --disable-blur-scope --disable-cairo-spectrum --disable-alarm --disable-albumart --disable-delete-files --disable-search-tool --disable-mpris2 --disable-scrobbler2 --enable-mac-media-keys"
APP_MAKE_METHOD="PATH=${HOME}/Qt/5.3/clang_64/bin:${PREFIX}/bin:${PATH} gmake -s ${MAKE_OPTS}"
APP_INSTALL_METHOD="gmake install -s ${MAKE_OPTS}"
APP_NO_CCACHE="YES"
APP_COMPILER_ARGS="-mmacosx-version-min=10.7"
