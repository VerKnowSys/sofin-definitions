DISABLE_ON="Linux FreeBSD"
APP_FULL_NAME="Audacious Plugins"
APP_NAME="audacious-plugins"
APP_VERSION="3.7-devel"
APP_GIT_MODE="true"
APP_GIT_CHECKOUT="master"
APP_HTTP_PATH="git@github.com:audacious-media-player/audacious-plugins.git"
APP_REQUIREMENTS="m4 gmake perl autoconf automake expat zlib bzip2 cmake pcre pkgconf libffi gettext python27 libtool glib flac mpg123 yasm ffmpeg libogg libvorbis curl faad neon libxml2 soxr libsndfile libbs2b libcue qtbase55 qtme55 audacious-core audacious-plugins"
APP_CONFIGURE_SCRIPT="./autogen.sh ; ./configure PKG_CONFIG_PATH=${PREFIX}/lib/pkgconfig:/usr/local/lib/pkgconfig"
APP_CONFIGURE_ARGS="--enable-qt --enable-qtui --disable-gtk --disable-gtkui --disable-skins --disable-lyricwiki --disable-filewriter --disable-glspectrum --disable-songchange --disable-statusicon --disable-vtx --disable-ladspa --disable-blur-scope --disable-cairo-spectrum --disable-alarm --disable-albumart --disable-delete-files --disable-search-tool --disable-mpris2 --disable-scrobbler2 --disable-qtaudio --with-system-libxml2=no --enable-jack --enable-mac-media-keys"
APP_MAKE_METHOD="gmake -s ${MAKE_OPTS}"
APP_INSTALL_METHOD="gmake install -s ${MAKE_OPTS}"
APP_NO_CCACHE="YES"
APP_COMPILER_ARGS="-mmacosx-version-min=10.9"
