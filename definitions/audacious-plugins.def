DISABLE_ON="Linux FreeBSD"
APP_FULL_NAME="Audacious Plugins"
APP_NAME="audacious-plugins"
APP_VERSION="3.5-devel"
APP_GIT_MODE="true"
APP_HTTP_PATH="https://github.com/brassy/audacious-plugins.git"
APP_REQUIREMENTS="m4 gmake perl autoconf automake zlib pcre pkgconf libffi gettext python-legacy libtool glib238 qt5-glib sdl flac mpg123 yasm ffmpeg audacious"
APP_CONFIGURE_SCRIPT="./autogen.sh ; ./configure"
APP_CONFIGURE_ARGS="--disable-gtk --disable-gtkui --disable-skins --disable-lyricwiki --disable-xspf --disable-filewriter --disable-glspectrum --disable-songchange --disable-statusicon"
APP_MAKE_METHOD="gmake -s ${MAKE_OPTS}"
APP_INSTALL_METHOD="gmake install -s ${MAKE_OPTS}"
APP_NO_CCACHE="YES"
APP_COMPILER_ARGS="-mmacosx-version-min=10.8"
