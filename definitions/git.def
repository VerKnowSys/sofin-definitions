DISABLE_ON="Darwin"
APP_FULL_NAME="Git SCM"
APP_SHA="28840754d49b58cbaa152eab17acc9498bd224cd"
APP_NAME="git"
APP_VERSION="2.8.2"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.xz"
if [ "${SYSTEM_NAME}" != "Minix" ]; then
    APP_CONFIGURE_ARGS="--with-iconv=${PREFIX} --with-expat=${PREFIX} --with-curl=${PREFIX} --with-openssl=${PREFIX} --with-libpcre=${PREFIX} --without-tcltk --without-python --with-perl=${PREFIX}/bin/perl --with-zlib=${PREFIX} --enable-pthreads=-pthread ac_cv_header_libcharset_h=no"
else
    APP_CONFIGURE_ARGS="--with-openssl --with-iconv --with-expat --with-curl --with-zlib=/usr/lib --with-libpcre=${PREFIX} --without-tcltk --without-python --with-shell=/bin/sh --with-perl=/usr/pkg/bin/perl TAR=${TAR_BIN} INSTALL=${INSTALL_BIN} --enable-pthreads=-pthread ac_cv_search_clock_gettime=no"
    APP_COMPILER_ARGS="-D_NETBSD_SOURCE"
fi
APP_REQUIREMENTS="pkgconf gmake zlib xz pcre libiconv expat perl bzip2 openssl texinfo libidn curl pth"
APP_MAKE_METHOD="gmake -s ${MAKE_OPTS}"
APP_INSTALL_METHOD="INSTALL=${INSTALL_BIN} gmake install -s ${MAKE_OPTS}"
APP_EXPORTS="git git-receive-pack git-shell git-upload-archive git-upload-pack"
APP_USEFUL="bin/perl*"
APP_USELESS="share/examples share/texinfo"
