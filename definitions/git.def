DEF_DISABLE_ON="Darwin"
DEF_FULL_NAME="Git SCM"
DEF_SHA="28840754d49b58cbaa152eab17acc9498bd224cd"
DEF_NAME="git"
DEF_VERSION="2.8.2"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.xz"
if [ "${SYSTEM_NAME}" != "Minix" ]; then
    DEF_CONFIGURE_ARGS="--with-iconv=${PREFIX} --with-expat=${PREFIX} --with-curl=${PREFIX} --with-openssl=${PREFIX} --with-libpcre=${PREFIX} --without-tcltk --without-python --with-perl=${PREFIX}/bin/perl --with-zlib=${PREFIX} --enable-pthreads=-pthread ac_cv_header_libcharset_h=no"
else
    DEF_CONFIGURE_ARGS="--with-openssl=/usr/lib --with-expat=${PREFIX} --with-curl=${PREFIX} --with-zlib=${PREFIX} --with-libpcre=${PREFIX} --with-iconv=/usr/lib --without-tcltk --without-python --with-shell=/bin/sh --with-perl=/usr/pkg/bin/perl --enable-pthreads=-pthread ac_cv_search_clock_gettime=no git_cv_ld_dashr=no gitexecdir=${PREFIX}/bin TAR=${TAR_BIN} INSTALL=${INSTALL_BIN}"
    DEF_COMPILER_ARGS="-D_NETBSD_SOURCE"
fi
DEF_REQUIREMENTS="pkgconf make zlib xz pcre expat perl bzip2 m4 libtool libressl texinfo libidn curl pth"
DEF_EXPORTS="git git-receive-pack git-shell git-upload-archive git-upload-pack"
DEF_USEFUL="bin/perl*"
DEF_USELESS="share/examples share/texinfo"
