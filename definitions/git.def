DISABLE_ON="Darwin"
APP_FULL_NAME="Git SCM"
APP_SHA="2126585d365545998da424e3ddb16096674f4aae"
APP_NAME="git"
APP_VERSION="2.7.2"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.xz"
APP_CONFIGURE_ARGS="--with-iconv=${PREFIX} --with-expat=${PREFIX} --with-curl=${PREFIX} --with-openssl=${PREFIX} --with-libpcre=${PREFIX} --without-tcltk --without-python --with-perl=${PREFIX}/bin/perl --with-zlib=${PREFIX} --enable-pthreads=-pthread ac_cv_header_libcharset_h=no"
APP_REQUIREMENTS="gmake zlib pcre libiconv expat perl bzip2 libressl texinfo libidn curl"
APP_MAKE_METHOD="gmake -s ${MAKE_OPTS}"
APP_INSTALL_METHOD="gmake install -s ${MAKE_OPTS}"
APP_EXPORTS="git git-receive-pack git-shell git-upload-archive git-upload-pack"
APP_USEFUL="bin/perl*"
APP_USELESS="share/examples share/texinfo"
