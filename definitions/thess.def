DEF_FULL_NAME="The Service Spawner"
DEF_STANDALONE="true"
DEF_SHA="b857f365d6ba7d8c89d98e6e80b0540d9eb3f940"
DEF_NAME="thess"
DEF_VERSION="0.100.5"
DEF_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.bz2"
DEF_CONFIGURE="ignore"
DEF_REQUIREMENTS="make qtbase55 qtws55"
DEF_MAKE_METHOD="QT=${PREFIX} bin/build && ${MKDIR_BIN} -p ${PREFIX}"
DEF_INSTALL_METHOD="install_thess_fun"
DEF_AFTER_EXPORT_CALLBACK="igniters_install"
DEF_EXPORTS="svdpanel svdshell svdss svddw ignitersinstall svdirc_notify svddeployer svdply svdcoreginx_helper ttys_updater svdadduser"
DEF_CONFLICTS_WITH="Thess-devel"
DEF_USELESS="OLD-shit doc docs lib/cmake"
DEF_USEFUL="bin/qmake bin/build bin/moc"

install_thess_fun () {
    ${CP_BIN} -fR ${BUILD_DIR_ROOT}/${DEF_NAME}-${DEF_VERSION}/* ${PREFIX}
}

igniters_install () {
    ${PREFIX}/bin/ignitersinstall
}
