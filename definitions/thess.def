APP_FULL_NAME="The Service Spawner"
APP_STANDALONE="true"
APP_SHA="9d87e151c079fa0410314fe07d9556f3321c89f5"
APP_NAME="thess"
APP_VERSION="0.98.5"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.bz2"
APP_CONFIGURE_SCRIPT="ignore"
APP_REQUIREMENTS="gmake qtbase53 qtws53"
APP_MAKE_METHOD="QT=${PREFIX} bin/build && ${MKDIR_BIN} -p ${PREFIX}"
APP_INSTALL_METHOD="install_thess_fun"
APP_AFTER_EXPORT_CALLBACK="igniters_install"
APP_EXPORTS="svdpanel svdshell svdss svddw ignitersinstall svdirc_notify svddeployer svdply svdcoreginx_helper ttys_updater svdadduser"
APP_CONFLICTS_WITH="Thess-devel"
APP_USELESS="OLD-shit doc docs lib/cmake"
APP_USEFUL="bin/qmake bin/build"

install_thess_fun () {
    if [ "${SYSTEM_NAME}" = "Linux" ]; then
        ${CP_BIN} -fR ${CACHE_DIR}cache/${APP_NAME}-${APP_VERSION}/${APP_NAME}-${APP_VERSION}/* ${PREFIX}
    else
        ${CP_BIN} -fR ${CACHE_DIR}cache/${APP_NAME}-${APP_VERSION}-${RUNTIME_SHA}/${APP_NAME}-${APP_VERSION}/* ${PREFIX}
    fi
}

igniters_install () {
    ${PREFIX}/bin/ignitersinstall
}
