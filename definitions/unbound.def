DEF_DISABLE_ON="Darwin"
DEF_FULL_NAME="Unbound - a modern, validating, recursive, caching DNS resolver."
DEF_STANDALONE=YES
DEF_NAME="unbound"
DEF_VERSION="1.16.0"
DEF_SHA="376305561f177d69cf94de5a3f409d98c2520498"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_ORIGIN="https://nlnetlabs.nl/downloads/${DEF_NAME}/${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_REQUIREMENTS="expat libressl-lib libevent libsodium"
DEF_CONFIGURE_ARGS="--enable-pie --enable-relro-now --enable-shared --enable-dnscrypt --disable-static --with-pthreads --with-libexpat=${PREFIX} --with-ssl=${PREFIX} --with-libevent=${PREFIX} --with-libsodium=${PREFIX} --with-conf-file=${SERVICE_DIR}/service.conf --with-pidfile=${SERVICE_DIR}/service.pid --with-rootkey-file=${SERVICE_DIR}/root.key --with-run-dir=${SERVICE_DIR}"
DEF_EXPORTS="${DEF_NAME} ${DEF_NAME}-anchor ${DEF_NAME}-checkconf ${DEF_NAME}-control ${DEF_NAME}-control-setup"
DEF_USELESS="lib/pkgconfig lib/*.{a,la,sh} bin man include"
