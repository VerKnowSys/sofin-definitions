DEF_DISABLE_ON="Linux"
DEF_FULL_NAME="Low Level Virtual Machine bundle (provided with shared build of Clang)"
DEF_SHA="7ef2527ba3da7603a41ce3592a8cd890f8d27ffa"
DEF_NAME="llvm"
DEF_VERSION="9.0.0"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.src.tar.xz"
DEF_REQUIREMENTS="libedit pcre yaml libffi libressl python27 ninja swig libunwind libxml2"
DEF_CONFIGURE_ARGS="-DLLVM_ENABLE_CXX1Y=on -DLLVM_INCLUDE_EXAMPLES=off -DLLVM_INCLUDE_TESTS=off -DLLVM_ENABLE_RTTI=on -DLLVM_ENABLE_PIC=on -DLLVM_TARGETS_TO_BUILD=\"X86;ARM\" -DLLVM_TARGET_ARCH=x86_64 -DLLVM_BUILD_32_BITS=off -DLLVM_INSTALL_UTILS=on -DLLVM_OPTIMIZED_TABLEGEN=on -DLLVM_ENABLE_ASSERTIONS=off -DLLVM_USE_FOLDERS=off -DLLVM_BUILD_DOCS=off -DLLVM_INCLUDE_DOCS=off -DLLVM_INCLUDE_GO_TESTS=off -DLLVM_PARALLEL_LINK_JOBS=$((${CPUS} + 4)) -DLLVM_PARALLEL_COMPILE_JOBS=$((${CPUS} + 4)) -DLLVM_APPEND_VC_REV=off -DLLVM_BUILD_LLVM_DYLIB=on -DBUILD_SHARED_LIBS=on -DLLVM_ENABLE_LTO=Thin"
DEF_CONFIGURE_METHOD="cmake"
DEF_EXPORTS="FileCheck not lli-child-target bugpoint c-index-test idle llc lli llvm-ar llvm-as llvm-bcanalyzer llvm-config llvm-cov llvm-diff llvm-dis llvm-dwarfdump llvm-extract llvm-ld llvm-lto llvm-link llvm-mc llvm-nm llvm-objdump llvm-prof llvm-ranlib llvm-readobj llvm-rtdyld llvm-size llvm-stress llvm-stub llvm-tblgen macho-dump opt llvm-symbolizer llvm-split llvm-profdata llvm-PerfectShuffle llvm-pdbdump llvm-mcmarkup llvm-lib llvm-dwp llvm-dsymutil llvm-cxxdump llvm-c-test llvm-undname llvm-xray yaml-bench obj2yaml yaml2obj swig ccache-swig finish_swig c++-analyzer ccc-analyzer diagtool count hmaptool sanstats sancov dsymutil verify-uselistorder scan-build ocspcheck"
DEF_USEFUL="bin/llvm* bin/*conf"
DEF_USELESS="lib/perl* share man doc"

unset DEF_USE_RAMDISK

# Cmake build can.. skip FileCheck installation, just because
DEF_AFTER_INSTALL_METHOD="fix_cmake_mess"
fix_cmake_mess () {
    try "${INSTALL_BIN} -v bin/FileCheck ${PREFIX}/bin/FileCheck"
}
