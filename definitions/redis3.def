DEF_DISABLE_ON="Linux"
DEF_STANDALONE=YES
DEF_FULL_NAME="Redis is in-memory data structure store, used as database, cache and message broker."
DEF_NAME="redis"
DEF_VERSION="3.2.3"
DEF_SHA="92d6d93ef2efc91e595c8bf578bf72baff397507"
DEF_ORIGIN="http://${DEF_NAME}.io"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_REQUIREMENTS="make"
DEF_CONFIGURE="ignore"
DEF_MAKE_METHOD="MALLOC=jemalloc CC=${C_COMPILER_NAME} CXX=${CXX_COMPILER_NAME} PREFIX=${PREFIX} make -s"
DEF_INSTALL_METHOD="MALLOC=jemalloc CC=${C_COMPILER_NAME} CXX=${CXX_COMPILER_NAME} PREFIX=${PREFIX} make -s install"
DEF_EXPORTS="${DEF_NAME}-cli ${DEF_NAME}-server ${DEF_NAME}-benchmark ${DEF_NAME}-check-dump ${DEF_NAME}-check-aof"
if [ "${SYSTEM_NAME}" = "Darwin" ]; then
    # under Darwin "leaks" is used .... so this crap is calling sudo N times one by one,
    # causing flood of "ask for root password" prompts... I have no further comments...
    DEF_TEST_METHOD="false"
fi
