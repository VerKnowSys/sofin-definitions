inherit "python37"

unset DEF_SUFFIX
DEF_FULL_NAME="Glances (Python 3.7)"
DEF_VERSION="3.1.2"
DEF_NAME="glances"
DEF_REQUIREMENTS="${DEF_REQUIREMENTS} python37"
DEF_TYPE="meta"
DEF_EXPORTS="${DEF_NAME}"
DEF_USEFUL="bin/python3*"

DEF_AFTER_INSTALL_METHOD="upgrade_pip && install_glances"
upgrade_pip () {
    pip3 install --upgrade pip
}

install_glances () {
    pip3 install glances
}
