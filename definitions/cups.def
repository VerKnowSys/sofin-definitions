DISABLE_ON="Darwin"
APP_FULL_NAME="Common Unix Printing System"
APP_SHA="7b5bcd0da7a11185ab01f5ab5cd8d1168c7c8b3f"
APP_NAME="cups"
APP_VERSION="2.1.2"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}-source.tar.bz2"
APP_CONFIGURE_ARGS="--localstatedir=${SERVICE_DIR}/state --disable-gssapi --with-cups-user=worker --with-cups-group=cups --with-system-groups=staff --without-docdir --without-icondir --without-menudir --with-cachedir=${SERVICE_DIR}/cache --with-pam-module='unix' --enable-ssl --enable-shared --disable-static"
APP_AFTER_INSTALL_CALLBACK="${MKDIR_BIN} -p ${SERVICE_DIR}/state ${SERVICE_DIR}/cache"
APP_REQUIREMENTS="gmake libressl"
APP_MAKE_METHOD="gmake -s"
APP_INSTALL_METHOD="gmake -s install"
APP_EXPORTS="cancel cups-config cupstestdsc cupstestppd ipptool lp lpoptions lppasswd lpq lpr lprm lpstat ppdc ppdhtml ppdi ppdmerge ppdpo accept cupsaccept cupsaddsmb cupsctl cupsd cupsdisable cupsenable cupsfilter cupsreject lpadmin lpc lpinfo lpmove paperconfig reject"
