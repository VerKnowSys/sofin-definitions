DEF_DISABLE_ON="Darwin"
DEF_FULL_NAME="Vim editor"
DEF_NAME="vim"
DEF_SHA="601abf7cc2b5ab186f40d8790e542f86afca86b7"
DEF_VERSION="7.4"
DEF_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.bz2"
DEF_CONFIGURE_ARGS="--enable-gui=no --without-x --disable-perlinterp --disable-pythoninterp --disable-tclinterp --disable-rubyinterp --disable-luainterp --disable-nls --disable-selinux --disable-netbeans --disable-gtktest --disable-largefile --disable-gpm --with-compiledby=VerKnowSys --with-tlib=ncurses --enable-multibyte"
DEF_REQUIREMENTS="libiconv ncurses"
DEF_AFTER_INSTALL_CALLBACK="${PRINTF_BIN} \"set nocompatible\n\" >> $HOME/.vimrc"
DEF_EXPORTS="vim xxd rview rvim ex vimdiff view vimtutor"
DEF_MAKE_METHOD="make -s"
DEF_INSTALL_METHOD="make -s install"
