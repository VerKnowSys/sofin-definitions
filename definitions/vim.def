DISABLE_ON="Darwin"
APP_FULL_NAME="Vim editor"
APP_NAME="vim"
APP_SHA="601abf7cc2b5ab186f40d8790e542f86afca86b7"
APP_VERSION="7.4"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.bz2"
APP_CONFIGURE_ARGS="--enable-gui=no --without-x --disable-perlinterp --disable-pythoninterp --disable-tclinterp --disable-rubyinterp --disable-luainterp --disable-nls --disable-selinux --disable-netbeans --disable-gtktest --disable-largefile --disable-gpm --with-compiledby=VerKnowSys --with-tlib=ncurses --enable-multibyte"
APP_REQUIREMENTS="libiconv ncurses"
APP_AFTER_INSTALL_CALLBACK="${PRINTF_BIN} \"set nocompatible\n\" >> $HOME/.vimrc"
APP_EXPORTS="vim xxd rview rvim ex vimdiff view vimtutor"
APP_MAKE_METHOD="make -s"
APP_INSTALL_METHOD="make -s install"
