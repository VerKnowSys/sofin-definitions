DEF_FULL_NAME="C library for asynchronous DNS requests (including name resolves)"
DEF_NAME="c-ares"
DEF_VERSION="1.17.2"
DEF_SHA="933d862f5877625003a212a7f825309af6517dea"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_ORIGIN="https://c-ares.haxx.se/download/${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_REQUIREMENTS="make-static libtool"
DEF_CONFIGURE_METHOD="CFLAGS=\"-fPIC -fPIE ${COMMON_FLAGS} ${CFLAGS_PRODUCTION}\" ./configure"
DEF_CONFIGURE_ARGS="--enable-optimize --disable-static --disable-werror --disable-debug --enable-nonblocking --disable-curldebug --disable-dependency-tracking"
DEF_MAKE_METHOD="make all ${MAKE_OPTS}"
DEF_EXPORTS="acountry adig ahost"
