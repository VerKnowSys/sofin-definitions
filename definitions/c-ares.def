DEF_FULL_NAME="C library for asynchronous DNS requests (including name resolves)"
DEF_NAME="c-ares"
DEF_VERSION="1.15.0"
DEF_SHA="74a50c02b7f051c4fb66c0f60f187350f196d908"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_ORIGIN="https://c-ares.haxx.se/download/${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_REQUIREMENTS="make m4 libtool"
DEF_CONFIGURE_METHOD="CFLAGS=\"-fPIC -fPIE ${COMMON_FLAGS} ${HARDEN_FLAGS}\" ./configure"
DEF_CONFIGURE_ARGS="--disable-static --disable-werror --disable-debug --enable-nonblocking --disable-curldebug"
DEF_MAKE_METHOD="make all"
DEF_EXPORTS="acountry adig ahost"
