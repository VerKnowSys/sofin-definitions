DEF_FULL_NAME="BitlBee - one client for all server types!"
DEF_NAME="bitlbee"
DEF_VERSION="3.5.1"
DEF_SHA="de0767facdb7729253ae4d6ef6e3637ebd54939a"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_REQUIREMENTS="pkgconf make ccache zlib pcre bzip2 lzma xz cmake expat libressl perl autoconf texinfo automake114 icu libunistring libffi gettext glib libiconv m4 libtool libidn2 python27 libevent spdylay nghttp2 libssh2 curl libgpg-error libgcrypt"
DEF_AFTER_UNPACK_METHOD="${MKDIR_BIN} -p ${SERVICE_DIR}/etc ${SERVICE_DIR}/var/run"
DEF_CONFIGURE_METHOD="./configure"
DEF_CONFIGURE_ARGS="${DEF_CONFIGURE_ARGS} --prefix=${PREFIX} --config=${SERVICE_DIR}/etc --pidfile=${SERVICE_DIR}/var/run --doc=0 --strip=1 --pie=0 --asan=0 --skype=1 --twitter=1 --ssl=openssl"
DEF_AFTER_CONFIGURE_METHOD="${DEF_CONFIGURE_METHOD} ${DEF_CONFIGURE_ARGS}"
DEF_EXPORTS="bitlbee"
DEF_USELESS="lib/*python* include/*python* lib/*perl* include/*perl* share/man share/texinfo share/info share/aclocal"
