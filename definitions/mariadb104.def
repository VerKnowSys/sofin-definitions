inherit "mariadb"

DEF_FULL_NAME="MariaDB 10.4"
DEF_VERSION="10.4.15"
DEF_SHA="929f6847c93be099f2667492d9426486d29fc606"
DEF_ORIGIN="http://ftp.icm.edu.pl/pub/unix/database/${DEF_NAME}//${DEF_NAME}-${DEF_VERSION}/source/${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_REQUIREMENTS="jemalloc pcre libxml2 lz4 lzo snappy readline libressl msgpack libevent perl-static bison zstd"
DEF_CONFIGURE_ARGS="${DEF_CONFIGURE_ARGS} -DPLUGIN_XTRADB=DYNAMIC -DPLUGIN_SPIDER=DYNAMIC -DPLUGIN_DAEMON_EXAMPLE=NO -DPLUGIN_DIALOG_EXAMPLES=NO -DPLUGIN_EXAMPLE=NO -DPLUGIN_EXAMPLE_KEY_MANAGEMENT=NO -DPLUGIN_FTEXAMPLE=NO -DCONC_WITH_SSL=YES -DPLUGIN_USER_VARIABLES=DYNAMIC -DPLUGIN_ROCKSDB=NO" # NOTE: disabled rocksdb
DEF_USE_CXX17=YES
