DEF_FULL_NAME="Flac lossless audio codec"
DEF_SHA="38e17439d11be26207e4af0ff50973815694b26f"
DEF_NAME="flac"
DEF_VERSION="1.3.1"
DEF_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.xz"
DEF_REQUIREMENTS="libiconv"
DEF_CONFIGURE_ARGS="--disable-xmms-plugin --with-ogg=${PREFIX} --with-libiconv-prefix=${PREFIX} --disable-doxygen-docs --disable-thorough-tests --disable-largefile"
DEF_EXPORTS="flac metaflac"
if [ "${SYSTEM_NAME}" = "Darwin" ]; then
  export DEF_CONFIGURE_ARGS="${DEF_CONFIGURE_ARGS} --enable-static"
else
  export DEF_CONFIGURE_ARGS="${DEF_CONFIGURE_ARGS} --disable-static"
fi
