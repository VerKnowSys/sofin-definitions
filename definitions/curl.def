DEF_NAME="curl"
DEF_VERSION="7.64.0"
DEF_SHA="7539acc0742c2fb1472bc2904f0bd58eeebc011a"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.xz"
DEF_ORIGIN="https://curl.haxx.se/download.html"
DEF_REQUIREMENTS="jemalloc pcre icu libunistring gettext lzo libffi libxml2 libressl perl libidn2 libevent python27 nghttp2 libssh2"
DEF_CONFIGURE_ARGS="--with-ca-bundle=${SERVICE_DIR}/etc/ssl/cert.pem --with-libidn2=${PREFIX} --with-nghttp2=${PREFIX} --with-libssh2=${PREFIX} --without-gnutls --without-polarssl --without-mbedtls --without-cyassl --without-nss --without-axtls --disable-ldap --disable-ldaps --disable-debug"
DEF_EXPORTS="curl curl-config"
DEF_USELESS="man lib/*python* lib/*perl* include/*python* share/man share/texinfo share/info share/aclocal* share/gettext* lib/*.a lib/cmake lib/libffi-* include lib/pkgconfig"
DEF_INSTALL_METHOD="make -s install"
DEF_STANDALONE=YES
DEF_USE_SAFE_STACK=YES
unset DEF_USE_LTO

DEF_AFTER_INSTALL_METHOD="fetch_and_install_fresh_ca_cert"
fetch_and_install_fresh_ca_cert () {
    mkdir -p "${SERVICE_DIR}/etc/ssl"

    try "${MKDIR_BIN} -p ${SERVICE_DIR}/etc/ssl; ${RM_BIN} -vf ${SERVICE_DIR}/etc/ssl/cert.pem" \
        && note "Removed old CA cert: $(distn "${SERVICE_DIR}/etc/ssl/cert.pem")"

    try "${FETCH_BIN} -o ${SERVICE_DIR}/etc/ssl/cert.pem ${FETCH_OPTS} ${DEF_DEFAULT_CA_CERT_SOURCE}" \
        && note "Fetched most recent CA certs from: $(distn "${DEF_DEFAULT_CA_CERT_SOURCE}")" \
        && return 0

    try "${FETCH_BIN} -o ${SERVICE_DIR}/etc/ssl/cert.pem ${FETCH_OPTS} ${DEF_DEFAULT_CA_CERT_SOURCE_ALT}" \
        && note "Fetched cached CA certs from: $(distn "${DEF_DEFAULT_CA_CERT_SOURCE_ALT}")" \
        && return 0
}
