DEF_FULL_NAME="cURL"
DEF_SHA="aa9f2300096d806c68c7ba8c50771853d1b43eb4"
DEF_NAME="curl"
DEF_VERSION="7.52.1"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.bz2"
DEF_EXPORTS="curl curl-config"
DEF_CA_ROOTCERT_ORIGIN="https://curl.haxx.se/ca/cacert.pem"
DEF_CONFIGURE_ARGS="--with-ca-bundle=${SERVICE_DIR}/etc/ssl/cert.pem --disable-debug"
DEF_REQUIREMENTS="pkgconf make jemalloc zlib bzip2 lzma xz expat libressl perl texinfo libidn python27 libevent spdylay nghttp2 libssh2"
DEF_INSTALL_METHOD="make -s install"
DEF_AFTER_INSTALL_METHOD="after_installation"
after_installation () {
    ${MKDIR_BIN} -p ${SERVICE_DIR}/etc/ssl
    ${RM_BIN} -vf ${SERVICE_DIR}/etc/ssl/cert.pem
    ${FETCH_BIN} -o ${SERVICE_DIR}/etc/ssl/cert.pem ${FETCH_OPTS} ${DEF_CA_ROOTCERT_ORIGIN}
}
DEF_USELESS="lib/*perl* include/*perl* share/man share/texinfo share/info share/aclocal"
