DEF_DISABLE_ON="Darwin"
DEF_FULL_NAME="Cairo graphics library (with PDF, PNG, JPEG support)"
DEF_SHA="0a59324e6cbe031b5b898ff8b9e2ffceb9d114f5"
DEF_NAME="cairo"
DEF_VERSION="1.14.6"
DEF_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.xz"
DEF_CONFIGURE_ARGS="--disable-directfb --disable-valgrind --enable-full-testing=no --enable-trace=no --enable-interpreter=yes --enable-gobject --disable-gl --disable-xlib --enable-symbol-lookup=no"
DEF_REQUIREMENTS="gmake pkgconf zlib bzip2 pth lzma lzo m4 pcre libressl python27 perl autoconf automake libtool bison util-macros cups libxml2 libxslt icu jbig2dec jbigkit libiconv nasm libjpeg-turbo freetype libpaper xcb-proto libpthread-stubs xproto libxau libxcb xtrans xextproto libx11 libice libsm kbproto libxt libxext texinfo libidn jpeg tiff lcms2 krb pixman libffi libgs libpng gettext glib"
DEF_USEFUL="bin/pkgconf bin/pkg-config" # XXX: pkg-config is required to let 3rd party apps know about library location
DEF_USELESS="include/python* lib/*perl* lib/python* lib/libxslt-plugins libexec ssl man share/man share/bash* share/aclocal* share/auto* share/cups share/bison share/doc share/examples share/texinfo share/info share/libtool share/ghostscript/${APP_VERSION}/doc share/ghostscript/${APP_VERSION}/examples share/gettext share/icu share/util-macros"
