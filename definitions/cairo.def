APP_USEFUL="bin/pkgconf bin/pkg-config" # XXX: pkg-config is required to let 3rd party apps know about library location
APP_USELESS="include/python2.7 lib/libperl.so lib/perl5 lib/python2.7 lib/libxslt-plugins libexec ssl man share/man share/bash* share/aclocal* share/auto* share/cups share/bison share/doc share/examples share/gtk-doc share/texinfo share/emacs share/info share/libtool share/ghostscript/${APP_VERSION}/doc share/ghostscript/${APP_VERSION}/examples share/gettext share/icu share/util-macros"
