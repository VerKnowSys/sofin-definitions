DISABLE_ON="Darwin"
APP_FULL_NAME="Cairo graphics library (with PDF, PNG, JPEG support)"
APP_SHA="0a59324e6cbe031b5b898ff8b9e2ffceb9d114f5"
APP_NAME="cairo"
APP_VERSION="1.14.6"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.xz"
APP_CONFIGURE_ARGS="--disable-directfb --disable-valgrind --enable-full-testing=no --enable-trace=no --enable-interpreter=yes --enable-gobject --disable-gl --disable-xlib --enable-symbol-lookup=no"
