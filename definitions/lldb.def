DEF_FULL_NAME="LLVM debugger: LLDB"
DEF_NAME="lldb"
DEF_VERSION="9.0.0"
DEF_SHA="7ac23c548c805be55713a759c4275d0389f9197e"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.src.tar.xz"
DEF_REQUIREMENTS="libedit pcre yaml libffi libressl python27 ninja swig libunwind libxml2 llvm cfe"
DEF_CONFIGURE_METHOD="cmake"
DEF_CONFIGURE_ARGS="-DBUILD_SHARED_LIBS=ON -DLEVELDB_BUILD_TESTS=OFF -DLLDB_INCLUDE_TESTS=OFF -DLLVM_USE_FOLDERS=OFF -DLLVM_ENABLE_LTO=Thin -DLLVM_PARALLEL_LINK_JOBS=$((${CPUS} + 4)) -DLLVM_PARALLEL_COMPILE_JOBS=$((${CPUS} + 4))"
DEF_EXPORTS="lldb lldb-server lldb-argdumper lldb-instr lldb-mi lldb-vscode"
DEF_USELESS="lib/*.{a,la} include"

unset DEF_USE_RAMDISK
