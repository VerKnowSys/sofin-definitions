DEF_FULL_NAME="Squid proxy"
DEF_NAME="squid"
DEF_SHA="da5c117c4431b2a9fb743466078c4d7e1be8a1f4"
DEF_VERSION="4.0.1"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.xz"
DEF_REQUIREMENTS="pkgconf bzip2 zlib make m4 gmp expat nettle libressl perl"
DEF_CONFIGURE_ARGS="--with-openssl=${PREFIX} \
--disable-select \
--disable-poll \
--disable-epoll \
--disable-linux-netfilter \
--disable-linux-tproxy \
--disable-http-violations \
--disable-translation \
--disable-arch-native \
--disable-auth \
--with-default-user=worker \
--with-aio \
--enable-pf-transparent \
--localstatedir=/Services/Squid/var \
--datadir=/Services/Squid/data \
--sysconfdir=/Services/Squid/etc \
--with-logdir=/Services/Squid/log \
--with-pidfile=/Services/Squid/run/squid.pid \
--with-swapdir=/Services/Squid/swap \
--with-large-files \
--without-heimdal-krb5 \
--without-mit-krb5 \
--without-gss \
--bindir=${PREFIX}/sbin \
--sbindir=${PREFIX}/sbin \
--libexecdir=${PREFIX}/libexec \
--without-gnutls \
--enable-build-info \
--enable-loadable-modules \
--enable-removal-policies=\"lru heap\""
DEF_USEFUL="bin/perl bin/openssl"
DEF_EXPORTS="squid squidclient purge cachemgr.cgi cert_tool cert_valid.pl diskd ext_delayer_acl ext_file_userip_acl ext_kerberos_ldap_group_acl ext_sql_session_acl ext_time_quota_acl ext_unix_group_acl ext_wbinfo_group_acl helper-mux log_db_daemon log_file_daemon storeid_file_rewrite unlinkd url_fake_rewrite url_fake_rewrite.sh url_lfs_rewrite"
DEF_LINKER_ARGS="-lpthread"
