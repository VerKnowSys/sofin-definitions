DEF_FULL_NAME="Parallel XZ"
DEF_SHA="fe352d3e076183be95609497b1102a5a49a65b4f"
DEF_NAME="pxz"
DEF_VERSION="4.999.9beta.20091201git"
DEF_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.xz"
DEF_CONFIGURE="no-conf"
DEF_INSTALL_METHOD="install_pxz"
install_pxz () {
    ${MKDIR_BIN} -p ${PREFIX}/bin
    ${CP_BIN} ${DEF_NAME} ${PREFIX}/bin/
}

DEF_AFTER_UNPACK_METHOD="patch_makefiles"
patch_makefiles () {
    ${SED_BIN} -i '' -e 's/gcc/clang/g' Makefile
    ${SED_BIN} -i '' -e 's/\|MAP_POPULATE//' pxz.c
}
DEF_EXPORTS="pxz"
