install_imagick () {
    arch_name="imagick-3.4.0RC6"
    archive="${arch_name}.tgz"
    ${FETCH_BIN} "${MAIN_SOURCE_REPOSITORY}${archive}" && \
    ${TAR_BIN} xf "${archive}" && \
    cd "${arch_name}" && \
    ${PREFIX}/bin/phpize && \
    ./configure --prefix=${PREFIX} --with-imagick=${PREFIX} && \
    PATH=${PREFIX}/bin:$PATH make install && \
    note "Installed IMagick pecl module" && \
    return 0
    return 1
