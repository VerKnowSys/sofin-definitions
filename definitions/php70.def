inherit php56

DEF_FULL_NAME="PHP 7"
DEF_SHA="510f548e0d53e4f29abf030eb4ca26d528f06ba3"
DEF_VERSION="7.0.16"
DEF_POSTFIX="70"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.xz"
DEF_BUNDLED_EXTENSIONS="xdebug imagick memcached"

install_memcached () {
    ${GIT_BIN} clone https://github.com/php-memcached-dev/php-memcached.git
    cd php-memcached
    ${GIT_BIN} checkout php7
    ${PREFIX}/bin/phpize
    ./configure --prefix=${PREFIX} --disable-memcached-sasl --with-php-config=${PREFIX}/bin/php-config
    PATH=${PREFIX}/bin:$PATH make install && \
    note "Installed PECL extension: ${geoip_name}" && \
    return 0
    return 1
}
