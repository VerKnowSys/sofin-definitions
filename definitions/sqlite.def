DEF_DISABLE_ON="Darwin-10.14"
DEF_FULL_NAME="SQLite"
DEF_NAME="sqlite"
DEF_VERSION="3310100"
DEF_SHA="0c30f5b22152a8166aa3bebb0f4bc1f3e9cc508b"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-autoconf-${DEF_VERSION}.tar.gz"
DEF_ORIGIN="https://www.sqlite.org/2019/${DEF_NAME}-autoconf-${DEF_VERSION}.tar.gz"
DEF_CONFIGURE_ARGS="--disable-static"
DEF_EXPORTS="sqlite3"
DEF_REQUIREMENTS="make"
DEF_INSTALL_METHOD="make -s install"
DEF_NO_FAST_MATH=YES

if [ "${SYSTEM_NAME}" = "Minix" ]; then
    DEF_COMPILER_FLAGS="-DSQLITE_ENABLE_COLUMN_METADATA -DSQLITE_ENABLE_UNLOCK_NOTIFY -DSQLITE_ENABLE_LOAD_EXTENSION -DUSE_PREAD -I/usr/pkg/include -L/usr/pkg/lib"
fi
