DEF_FULL_NAME="ProFTPD"
DEF_STANDALONE="true"
DEF_NAME="proftpd"
DEF_SHA="7c4027c207bdfe7c88b859810c7fa9b978b0524d"
DEF_VERSION="1.3.5a"
DEF_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_REQUIREMENTS="libressl geoip gettext"
DEF_CONFIGURE_ARGS="--enable-nls --with-includes=${PREFIX}/include --with-libraries=${PREFIX}/lib --enable-openssl --sysconfdir=/etc --localstatedir=/var/run --without-pam --disable-auth-pam --with-modules=mod_ifsession:mod_ratio:mod_readme:mod_tls:mod_geoip"
DEF_EXPORTS="ftpscrub ftpshut in.proftpd proftpd ftpasswd ftpcount ftpdctl ftpmail ftpquota ftptop ftpwho prxs"
DEF_INSTALL_METHOD="make install"
DEF_USELESS="share/aclocal*"
DEF_AFTER_UNPACK_CALLBACK="fetch_geoip"

fetch_geoip () {
    cd contrib
    ${FETCH_BIN} ${MAIN_SOURCE_REPOSITORY}/mod_geoip.c
    cd ..
}
