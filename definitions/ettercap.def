    export DEF_CONFIGURE_ARGS="${APP_CONFIGURE_ARGS} --with-iconv=${PREFIX}"
fi
DEF_EXPORTS="ettercap etterfilter etterlog"
FORCE_GNU_COMPILER="true"
DEF_MAKE_METHOD="gmake -s"
DEF_INSTALL_METHOD="gmake install -s"
