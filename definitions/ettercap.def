DEF_NAME="ettercap"
DEF_VERSION="0.7.4.1"
DEF_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
DEF_REQUIREMENTS="gmake zlib pkgconf libiconv bzip2 ncurses m4 flex bison perl openssl pcre libnet libtool libpcap"
DEF_CONFIGURE_ARGS="--with-libnet=${PREFIX} --with-libpcap=${PREFIX} --with-openssl=${PREFIX} --with-libpcre=${PREFIX} --disable-gtk --disable-plugins"
