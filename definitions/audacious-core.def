DISABLE_ON="Linux FreeBSD"
APP_FULL_NAME="Audacious Core"
APP_NAME="audacious"
APP_VERSION="3.6-devel"
APP_GIT_MODE="true"
APP_GIT_CHECKOUT="master"
APP_HTTP_PATH="git@github.com:audacious-media-player/audacious.git"
APP_REQUIREMENTS="m4 gmake perl autoconf automake zlib pcre pkgconf libffi gettext python-legacy libtool glib240 sdl flac mpg123 yasm ffmpeg"
APP_CONFIGURE_SCRIPT="./autogen.sh ; ./configure PKG_CONFIG_PATH=/Software/Qt53/lib/pkgconfig:$HOME/Apps/Qt53/lib/pkgconfig:${HOME}/Qt/5.3/clang_64/lib/pkgconfig"
APP_CONFIGURE_ARGS="--disable-gtk --disable-dbus --enable-qt"
APP_MAKE_METHOD="gmake -s ${MAKE_OPTS}"
APP_INSTALL_METHOD="gmake install -s ${MAKE_OPTS} ; ${CP_BIN} -r contrib/macpack/Audacious.app ${PREFIX}/../"
APP_NO_CCACHE="YES"
APP_COMPILER_ARGS="-mmacosx-version-min=10.7"
