DEF_DISABLE_ON="Linux FreeBSD"
DEF_FULL_NAME="Audacious Core"
DEF_NAME="audacious"
DEF_VERSION="devel"
DEF_GIT_CHECKOUT="master"
DEF_SOURCE_PATH="git@github.com:audacious-media-player/audacious.git"
DEF_REQUIREMENTS="m4 make autoconf automake zlib pcre pkgconf libffi gettext python27 libtool glib qtbase qtsvg qtmacextras"
BUILDSTAMP="Sofin-${SOFIN_VERSION} Darwin-${SYSTEM_VERSION} $(date +%Y-%m-%dT%H:%M:%S%z)"
DEF_CONFIGURE_METHOD="./autogen.sh; ./configure --with-buildstamp='${BUILDSTAMP}' PKG_CONFIG_PATH=${PREFIX}/lib/pkgconfig"
DEF_CONFIGURE_ARGS="--enable-qt --disable-gtk --disable-dbus"
