DISABLE_ON="Linux FreeBSD"
APP_FULL_NAME="Audacious Core"
APP_NAME="audacious"
APP_VERSION="3.7-devel"
APP_GIT_MODE="true"
APP_GIT_CHECKOUT="master"
APP_HTTP_PATH="git@github.com:audacious-media-player/audacious.git"
APP_REQUIREMENTS="m4 gmake perl autoconf automake zlib pcre pkgconf libffi gettext python27 libtool glib"
APP_CONFIGURE_SCRIPT="./autogen.sh ; ./configure PKG_CONFIG_PATH=${PREFIX}/lib/pkgconfig"
APP_CONFIGURE_ARGS="--disable-gtk --disable-dbus --enable-qt --enable-chardet"
APP_MAKE_METHOD="gmake -s ${MAKE_OPTS}"
APP_INSTALL_METHOD="gmake install -s ${MAKE_OPTS} ; ${CP_BIN} -r contrib/macpack/Audacious.app ${PREFIX}/"
APP_NO_CCACHE="YES"
APP_COMPILER_ARGS="-mmacosx-version-min=10.9"
APP_AFTER_EXPORT_CALLBACK="${CP_BIN} -r ${PREFIX}/Audacious.app ${PREFIX}/../"
