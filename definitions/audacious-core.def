DEF_DISABLE_ON="Linux FreeBSD"
DEF_FULL_NAME="Audacious Core"
DEF_NAME="audacious"
DEF_VERSION="3.7-devel"
DEF_GIT_MODE="true"
DEF_GIT_CHECKOUT="master"
DEF_HTTP_PATH="git@github.com:audacious-media-player/audacious.git"
DEF_REQUIREMENTS="m4 gmake perl autoconf automake zlib pcre pkgconf libffi gettext python27 libtool glib"
DEF_CONFIGURE="./autogen.sh ; ./configure PKG_CONFIG_PATH=${PREFIX}/lib/pkgconfig"
DEF_CONFIGURE_ARGS="--disable-gtk --disable-dbus --enable-qt --enable-chardet"
DEF_MAKE_METHOD="gmake -s ${MAKE_OPTS}"
DEF_INSTALL_METHOD="gmake install -s ${MAKE_OPTS} ; ${CP_BIN} -r contrib/macpack/Audacious.app ${PREFIX}/"
DEF_NO_CCACHE="YES"
DEF_COMPILER_ARGS="-mmacosx-version-min=10.9"
DEF_AFTER_EXPORT_CALLBACK="${CP_BIN} -r ${PREFIX}/Audacious.app ${PREFIX}/../"
