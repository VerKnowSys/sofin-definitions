DEF_FULL_NAME="Zstandard - Fast real-time compression algorithm"
DEF_NAME="zstd"
DEF_VERSION="1.5.6"
DEF_SHA="459ab8de8c24fc3ce648a35a07b31fcd6616ade2"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_ORIGIN="https://github.com/facebook/${DEF_NAME}/releases/download/${DEF_VERSION}/${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_REQUIREMENTS="xz lz4"
DEF_USE_CXX11=YES
DEF_EXPORTS="unzstd zstd zstdcat zstdgrep zstdless zstdmt"
DEF_USELESS="include share lib/*.a lib/pkgconfig"

case "${SYSTEM_NAME}" in
    Darwin)
        DEF_BUILD_DIR_SUFFIX="build/meson"
        DEF_CONFIGURE_METHOD="meson"
        ;;

    *)
        DEF_BUILD_DIR_SUFFIX="build/cmake"
        DEF_CONFIGURE_METHOD="cmake"
        ;;
esac
