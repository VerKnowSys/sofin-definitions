DISABLE_ON="Darwin"
APP_FULL_NAME="Modern version of GNU Privacy Guard 2"
APP_SHA="4af2032a60ff22e322b1c5b270d6d2228f59a3a3"
APP_NAME="gnupg"
APP_VERSION="2.1.11"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.bz2"
APP_REQUIREMENTS="pkgconf bzip2 zlib libiconv gmake libgpg-error libgcrypt libassuan libksba pth npth perl curl readline-dynamic gmp51 nettle libtasn1 libffi p11-kit gnutls"
APP_CONFIGURE_ARGS="--enable-symcryptrun --disable-nls --disable-doc --disable-ldap --with-libgcrypt-prefix=${PREFIX} --with-libassuan-prefix=${PREFIX} --with-npth-prefix=${PREFIX} --with-ksba-prefix=${PREFIX} --with-zlib=${PREFIX} --with-libgpg-error-prefix=${PREFIX} --with-libiconv-prefix=${PREFIX}"
APP_EXPORTS="gpg-connect-agent gpg-agent gpg-connect-agent gpg-error gpg-error-config gpg2 gpgconf gpgkey2ssh gpgparsemail gpgsm gpgsm-gencert.sh gpgv2 symcryptrun watchgnupg hmac256"
APP_USELESS="lib/*perl* share/common-lisp share/readline share/aclocal"
APP_MAKE_METHOD="gmake -s ${MAKE_OPTS}"
APP_INSTALL_METHOD="gmake install -s ${MAKE_OPTS}"
