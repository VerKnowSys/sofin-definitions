DEF_FULL_NAME="Modern version of GNU Privacy Guard 2"
DEF_SHA="295298debcc2c12f02a2f2fdf04aecb6d6aae396"
DEF_NAME="gnupg"
DEF_VERSION="2.2.6"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.bz2"
DEF_REQUIREMENTS="pkgconf make libtool db47 readline pcre sqlite libgpg-error libgcrypt libassuan libksba npth gmp nettle libtasn1 libffi p11-kit texinfo libidn gnutls"
DEF_CONFIGURE_ARGS="--disable-nls --disable-doc --disable-ntbtls --disable-wks-tools \
--with-libgcrypt-prefix=${PREFIX} --with-libassuan-prefix=${PREFIX} --with-npth-prefix=${PREFIX} \
--with-ksba-prefix=${PREFIX} --with-libgpg-error-prefix=${PREFIX} --with-readline=${PREFIX} \
--with-zlib=/usr --with-regex=${PREFIX} --disable-dependency-tracking --disable-ldap \
--enable-gpg-is-gpg2 --enable-symcryptrun --enable-gnutls \
"
DEF_EXPORTS="gpg-connect-agent gpg-agent gpg-connect-agent gpg-error gpg-error-config gpg gpg2 gpgconf gpgkey2ssh gpgparsemail gpgsm gpgsm-gencert.sh gpgv2 symcryptrun watchgnupg hmac256"
DEF_USELESS="share/readline share/aclocal"
unset DEF_USE_LTO
