inherit "python39"

unset DEF_SUFFIX
DEF_FULL_NAME="Meson build system (Python 3.9)"
DEF_VERSION="0.56.0"
DEF_NAME="meson"
DEF_USEFUL="bin/python3*"
DEF_REQUIREMENTS="@python39"
DEF_EXPORTS="${DEF_NAME}"
DEF_TYPE="meta"

DEF_AFTER_INSTALL_METHOD="upgrade_pip && install_meson"
upgrade_pip () {
    pip3 install --upgrade pip
}

install_meson () {
    pip3 install ${DEF_NAME}==${DEF_VERSION}
}
