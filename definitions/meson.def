inherit "python36"

unset DEF_SUFFIX
DEF_FULL_NAME="Meson build system (Python 3.6)"
DEF_VERSION="0.49+"
DEF_NAME="meson"
DEF_USEFUL="bin/python3*"
DEF_REQUIREMENTS="${DEF_REQUIREMENTS} python36"
DEF_EXPORTS="meson"
DEF_TYPE="meta"

DEF_AFTER_INSTALL_METHOD="upgrade_pip && install_asciinema"
upgrade_pip () {
    pip3 install --upgrade pip
}

install_asciinema () {
    pip3 install meson
}
