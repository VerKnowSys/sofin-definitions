APP_FULL_NAME="RRDtool"
APP_NAME="rrdtool"
APP_SHA="8275cd4dd3fb2086686ee5acfc7cc5e756483e0e"
APP_VERSION="1.5.5"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="gmake pkgconf zlib bzip2 pth lzma xz lzo m4 libtool libressl python27 perl autoconf automake bison util-macros cups expat libxml2 jbig2dec jbigkit libiconv nasm libjpeg-turbo libpaper texinfo libidn jpeg tiff lcms2 krb freetype fontconfig jasper fftw libffi gettext glib240 libpng pixman cairo pango"
APP_CONFIGURE_ARGS="--disable-examples --disable-perl --disable-librados --disable-ruby --disable-lua --disable-tcl --disable-python --disable-dependency-tracking --enable-rrd_graph --with-libintl-prefix=${PREFIX} --enable-nls --enable-rrd_restore --enable-rrdcgi --enable-pthread"
APP_EXPORTS="rrdtool rrdcreate rrdcached rrdupdate rrdinfo rrdcgi rrdgraph"
APP_USEFUL="bin/*rrd*"
APP_MAKE_METHOD="gmake"
APP_INSTALL_METHOD="gmake install"
APP_USELESS="include lib/python*"
APP_NO_FAST_MATH=YES
