DEF_FULL_NAME="GNU TLS Library"
DEF_NAME="gnutls"
DEF_SHA="52dab0301022199a34888fa6ed97d92e602ccd60"
DEF_VERSION="3.4.17"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.xz"
DEF_REQUIREMENTS="make bzip2 perl zlib m4 pkgconf libtool libgpg-error gmp nettle libtasn1 libffi p11-kit texinfo libidn"
DEF_CONFIGURE_ARGS="--disable-guile --enable-local-libopts --disable-docs" # --disable-nls
DEF_MAKE_METHOD="make ${MAKE_OPTS}"
DEF_INSTALL_METHOD="make ${MAKE_OPTS} install"
DEF_EXPORTS="gnutls-cli gnutls-serv"
DEF_USEFUL="bin/gnutls*"

if [ "${SYSTEM_NAME}" = "FreeBSD" ]; then
    DEF_CONFIGURE_ARGS="--disable-cxx"
fi
