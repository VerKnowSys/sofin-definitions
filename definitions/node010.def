APP_FULL_NAME="Nodejs"
APP_SHA="7e89d33ad0e56f6ca517f43a4a7b56079db18420"
APP_NAME="node"
APP_POSTFIX="010"
APP_VERSION="0.10.36"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-v${APP_VERSION}.tar.gz"
APP_AFTER_INSTALL_CALLBACK="npm install -g coffee-script less uglify-js nodemon"
APP_EXPORTS="node npm node-waf coffee lessc nodemon uglifyjs"
APP_NO_CCACHE="YES"
APP_ORIGIN="http://nodejs.org/download/"
APP_MAKE_METHOD="LD_LIBRARY_PATH=${PREFIX}/lib:/usr/lib gmake -s ${MAKE_OPTS}"
APP_INSTALL_METHOD="LD_LIBRARY_PATH=${PREFIX}/lib:/usr/lib gmake install -s ${MAKE_OPTS}"
APP_CONFLICTS_WITH="Node06 Node08"
APP_REQUIREMENTS="zlib bzip2 gmake yaml libiconv"
if [ "${SYSTEM_NAME}" = "Darwin" ]; then
    APP_CONFIGURE_SCRIPT="LD_LIBRARY_PATH=${PREFIX}/lib:/usr/lib /usr/bin/python ./configure"
else
    APP_REQUIREMENTS="${APP_REQUIREMENTS} python-legacy libexecinfo"
    APP_CONFIGURE_SCRIPT="LD_LIBRARY_PATH=${PREFIX}/lib:/usr/lib ${PREFIX}/bin/python ./configure"
fi
