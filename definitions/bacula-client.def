APP_FULL_NAME="Bacula backup system client"
APP_NAME="bacula"
APP_POSTFIX="-client"
APP_SHA="93a994b96ede585523a7e9a6713c440becfca447"
APP_VERSION="7.0.3"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="gmake zlib libiconv perl openssl lzo"
APP_CONFIGURE_ARGS="--with-tcp-wrappers=/usr/lib --enable-smartalloc --disable-nls --with-openssl=${PREFIX} --disable-conio --with-scriptdir=${PREFIX}/share/${APP_NAME} --enable-batch-insert --with-plugindir=${PREFIX}/lib --with-sbin-perm=755 --with-baseport=9101 --with-sd-group=operator --disable-libtool --enable-static-fd --enable-client-only DEBUG="
APP_MAKE_METHOD="gmake"
APP_INSTALL_METHOD="gmake install"
APP_EXPORTS="bacula bacula-fd bconsole btraceback static-bacula-fd"
