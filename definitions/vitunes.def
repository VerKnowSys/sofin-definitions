APP_FULL_NAME="Vitunes"
APP_NAME="vitunes"
APP_SHA="3e62aad57d48ac6bc37d4fee1804b6053fdd30a3"
APP_VERSION="2.3"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="cmake taglib gmake"
APP_CONFIGURE_SCRIPT="no-conf"
APP_MAKE_METHOD="make_vitunes"
make_vitunes () {
    ${SED_BIN} -i '' -e 's/-lncursesw/-lncurses/' Makefile
    cc players/mplayer.c -o mplayer.o -fPIC -c && \
    cc players/player_utils.c -o player_utils.o -fPIC -c && \
    ${PREFIX}/bin/gmake PREFIX=${PREFIX} ${MAKE_OPTS}
}
APP_INSTALL_METHOD="install_vitunes"
install_vitunes () {
    ${MKDIR_BIN} -p ${PREFIX}/man/man1
    ${PREFIX}/bin/gmake install PREFIX=${PREFIX}
}
APP_EXPORTS="vitunes"
