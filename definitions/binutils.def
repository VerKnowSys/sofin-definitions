DEF_FULL_NAME="GNU binutils"
DEF_ORIGIN="http://ftp.gnu.org/gnu/binutils/"
DEF_SHA="a637508cffeb2323b14bc8dd65378819768ad4ff"
DEF_NAME="binutils"
DEF_VERSION="2.26"
DEF_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.bz2"
DEF_REQUIREMENTS="pkgconf make bzip2 m4 perl autoconf libtool automake bison gmp mpfr libmpc texinfo isl012"
DEF_MAKE_METHOD="make"
DEF_INSTALL_METHOD="make -s install"
DEF_CONFIGURE_ARGS="--with-gmp=${PREFIX} --with-mpfr=${PREFIX} --with-isl=${PREFIX} --enable-vtable-verify --disable-werror --enable-host-shared --with-build-sysroot=/"
DEF_EXPORTS="ld ld.bfd ld.gold addr2line as ar c dlltool gprof nlmconv nm objcopy objdump ranlib readelf size strings strip windmc windres"
DEF_USELESS="lib share/ac* share/auto* share/bison share/libtool share/texinfo"
CROSS_PLATFORM_COMPILER_FLAGS="-w -O2 -fPIC -fPIE -fno-strict-overflow -fno-stack-protector"
DEFAULT_COMPILER_FLAGS="${CROSS_PLATFORM_COMPILER_FLAGS} -Wl,-fuse-ld=gold"
