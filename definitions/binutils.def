APP_FULL_NAME="GNU binutils"
APP_ORIGIN="http://ftp.gnu.org/gnu/binutils/"
APP_SHA="a637508cffeb2323b14bc8dd65378819768ad4ff"
APP_NAME="binutils"
APP_VERSION="2.26"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.bz2"
APP_REQUIREMENTS="pkgconf gmake bzip2 m4 perl autoconf libtool automake bison gmp51 mpfr libmpc texinfo isl012"
APP_MAKE_METHOD="gmake"
APP_INSTALL_METHOD="gmake install"
APP_CONFIGURE_ARGS="--with-gmp=${PREFIX} --with-mpfr=${PREFIX} --with-system-zlib --with-isl=${PREFIX} --enable-vtable-verify --disable-werror --enable-host-shared --with-build-sysroot=/"
APP_EXPORTS="ld ld.bfd ld.gold addr2line as ar c dlltool gprof nlmconv nm objcopy objdump ranlib readelf size strings strip windmc windres"
APP_USELESS="lib share/ac* share/auto* share/bison share/libtool share/texinfo"
CROSS_PLATFORM_COMPILER_FLAGS="-w -O2 -fPIC -fPIE -fno-strict-overflow -fno-stack-protector"
DEFAULT_COMPILER_FLAGS="${CROSS_PLATFORM_COMPILER_FLAGS} -Wl,-fuse-ld=gold"
