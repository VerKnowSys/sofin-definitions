DEF_FULL_NAME="GNU binutils"
DEF_ORIGIN="http://ftp.gnu.org/gnu/binutils/"
DEF_SHA="6e472ddae565a2b1447e6f2393809bb8799982cf"
DEF_NAME="binutils"
DEF_VERSION="2.27"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.bz2"
DEF_REQUIREMENTS="pkgconf make bzip2 m4 perl autoconf libtool automake bison gmp mpfr libmpc texinfo isl"
DEF_MAKE_METHOD="make -s ${MAKE_OPTS}"
DEF_INSTALL_METHOD="make -s install"
DEF_CONFIGURE_ARGS="--with-gmp=${PREFIX} --with-mpfr=${PREFIX} --with-isl=${PREFIX} --enable-vtable-verify --disable-werror --enable-host-shared --with-build-sysroot=/ --disable-libstdcxx"
DEF_EXPORTS="ld ld.bfd ld.gold addr2line as ar c dlltool gprof nlmconv nm objcopy objdump ranlib readelf size strings strip windmc windres"
DEF_USELESS="lib share/ac* share/auto* share/bison share/libtool share/texinfo"
DEF_NO_LLVM_LINKER=YES
