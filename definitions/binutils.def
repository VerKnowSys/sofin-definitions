DEF_FULL_NAME="GNU binutils"
DEF_ORIGIN="http://ftp.gnu.org/gnu/binutils/"
DEF_SHA="574d3b5650413d6ee65195a4f5ecbddc3a38f718"
DEF_NAME="binutils"
DEF_VERSION="2.30"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.xz"
DEF_REQUIREMENTS="pkgconf make m4 perl libtool bison gmp mpfr libmpc texinfo isl"
DEF_MAKE_METHOD="make -s ${MAKE_OPTS}"
DEF_INSTALL_METHOD="make -s install"
DEF_CONFIGURE_ARGS="--with-gmp=${PREFIX} --with-mpfr=${PREFIX} --with-isl=${PREFIX} --enable-vtable-verify --disable-werror --enable-host-shared --with-build-sysroot=/ --enable-libstdcxx"
DEF_EXPORTS="ld ld.bfd ld.gold addr2line as ar c dlltool gprof nlmconv nm objcopy objdump ranlib readelf size strings strip windmc windres"
DEF_USELESS="share/bison share/libtool share/texinfo"
DEF_NO_LLVM_LINKER=YES
