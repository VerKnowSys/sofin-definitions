DEF_STANDALONE=YES
DEF_NAME="mariadb"
DEF_FULL_NAME="MariaDB 10.5"
DEF_VERSION="10.5.13"
DEF_SHA="a57d4ff38ab914878e56fc3f07d97d6c7bc73613"
DEF_ORIGIN="http://ftp.icm.edu.pl/pub/unix/database/${DEF_NAME}//${DEF_NAME}-${DEF_VERSION}/source/${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_REQUIREMENTS="pcre2 libressl libevent @zstd snappy"
DEF_CONFIGURE_METHOD="cmake"
DEF_CONFIGURE_ARGS="-DSECURITY_HARDENED=ON -DBUILD_CONFIG=mysql_release -DINSTALL_INCLUDEDIR=include/mysql -DINSTALL_INFODIR=share/info -DINSTALL_MYSQLSHAREDIR=share/mysql -DMYSQL_MAINTAINER_MODE=OFF -DINSTALL_SCRIPTDIR=bin -DDEFAULT_CHARSET=utf8 -DDEFAULT_COLLATION=utf8_general_ci -DENABLED_LOCAL_INFILE=ON -DENABLE_DEBUG_SYNC=OFF -DWITH_SAFEMALLOC=OFF -DWITH_UNIT_TESTS=OFF -DWITH_VALGRIND=OFF -DWITH_LIBWRAP=OFF -DWITH_INNODB_LZ4=YES -DGRN_WITH_LZ4=YES -DWITH_INNODB_BZIP2=YES -DWITH_INNODB_LZMA=YES -DWITH_INNODB_LZO=YES -DINSTALL_SYSCONFDIR=${SERVICE_DIR}/etc -DTMPDIR=/tmp -DMYSQL_DATADIR=${SERVICE_DIR}/data -DWITH_SSL=yes -DWITH_INNODB_DISALLOW_WRITES=ON -DENABLED_PROFILING=OFF -DCOMPILATION_COMMENT=VerKnowSys -DCMAKE_OSX_ARCHITECTURES=x86_64 -DWITH_EMBEDDED_SERVER=ON -DPLUGIN_SEQUENCE=YES -DPLUGIN_PERFSCHEMA=YES -DPLUGIN_PARTITION=YES -DPLUGIN_FEEDBACK=YES -DPLUGIN_ARIA=YES -DPLUGIN_AUTH_GSSAPI_CLIENT=OFF -DCMAKE_SKIP_BUILD_RPATH=YES -DWITH_JEMALLOC=ON -DWITH_PCRE=system -DWITH_ZLIB=system -DWITH_INNODB_SNAPPY=YES -DPLUGIN_XTRADB=DYNAMIC -DPLUGIN_SPIDER=DYNAMIC -DCONC_WITH_SSL=YES -DPLUGIN_USER_VARIABLES=DYNAMIC"

case "${SYSTEM_ARCH}" in
    arm64|aarch64)
        DEF_CONFIGURE_ARGS="${DEF_CONFIGURE_ARGS} -DPLUGIN_ROCKSDB=NO"
        # NOTE: don't ask me why aria plugin has something s3-related that relies on curlâ€¦ but only if ROCKSDB plugin is not built. Amazing.
        DEF_REQUIREMENTS="${DEF_REQUIREMENTS} expat curl-dynamic"
        ;;

    amd64|x86_64)
        DEF_CONFIGURE_ARGS="${DEF_CONFIGURE_ARGS} -DWITH_ROCKSDB_BZip2=ON -DWITH_ROCKSDB_ZSTD=ON -DWITH_ROCKSDB_JEMALLOC=ON -DPLUGIN_ROCKSDB=DYNAMIC"
        ;;
esac

DEF_EXPORTS="mysql mysqld_multi mysqld mysqld_safe mysql_ldb mysql_config mysqladmin mysql-admin mysqlimport mysqlbinlog mysqldump mysqlaccess mysqlcheck mysqlhotcopy mysql_upgrade mysql_install_db msql2mysql myisamchk myisamlog myisampack mysqltest mysqlslap mysqldumpslow mysqlbug mysql_zap mysql_waitpid mysql_tzinfo_to_sql mysql_setpermission mysql_secure_installation mysql_plugin mysql_fix_extensions mysql_find_rows mysql_convert_table_format mysql_client_test my_print_defaults myisam_ftdump innochecksum aria_chk aria_dump_log aria_ftdump aria_pack aria_read_log mytop perror mysqlshow mysql-proxy resolveip mariabackup"
DEF_USELESS="bin/zstdmt share/{bison,gdb,libtool,cmake,man,gettext,aclocal,pkgconfig} share/gtk* share/glib* share/gettext* doc sql-bench data man docs sql-bench INSTALL-BINARY README COPYING COPYING.LESSER COPYING.thirdparty CREDITS EXCEPTIONS-CLIENT README-wsrep scripts libexec mysql-test include libdata lib/{cmake,pkgconfig} lib/*.{a,la}"
DEF_USEFUL="bin/my* bin/maria*" # always be prepared for more ;)

DEF_COMPILER_FLAGS="-w -DJEMALLOC_USABLE_SIZE_CONST=const"
DEF_USE_CXX17=YES

DEF_AFTER_PATCH_METHOD="sed_stuff"
sed_stuff () {
    ${SED_BIN} -i '' -e "s|%%LOCALBASE%%|${PREFIX}|g" scripts/mysql_config.sh
    ${SED_BIN} -i '' -e "s|%%PREFIX%%|${PREFIX}|g" mysys/my_default.c
    return 0
}

DEF_AFTER_INSTALL_METHOD="strip_plugins"
strip_plugins () {
    try "${STRIP_BIN} ${PREFIX}/lib/plugin/*.so"
    return 0
}

case "${SYSTEM_NAME}-${SYSTEM_VERSION}" in
    FreeBSD-11*)
        unset DEF_USE_LTO
        ;;
esac
