DEF_EXPORTS="mysql mysqld_multi mysqld mysqld_safe mysql_config mysqladmin mysqlimport mysqlbinlog mysqldump mysqlaccess mysqlcheck mysqlhotcopy mysql_upgrade mysql_install_db msql2mysql myisamchk myisamlog myisampack mysqltest mysqlslap mysqldumpslow mysqlbug mysql_zap mysql_waitpid mysql_tzinfo_to_sql mysql_setpermission mysql_secure_installation mysql_plugin mysql_fix_extensions mysql_find_rows mysql_convert_table_format mysql_client_test my_print_defaults myisam_ftdump innochecksum aria_chk aria_dump_log aria_ftdump aria_pack aria_read_log mytop perror mysqlshow mysql-proxy resolveip"
DEF_USELESS="share/bison share/gdb share/libtool doc sql-bench data share/cmake* man lib/*perl* lib/*python* doc docs sql-bench share/gtk* share/glib* share/man INSTALL-BINARY README COPYING share/gettext share/lua COPYING.LESSER COPYING.thirdparty CREDITS EXCEPTIONS-CLIENT README-wsrep scripts libexec lib/lua mysql-test include share/aclocal share/gettext* share/pkgconfig libdata lib/*.sh lib/cmake lib/pkgconfig lib/*.a"
DEF_USEFUL="bin/my*" # always be prepared for more ;)
# DEF_USE_SAFE_STACK=YES
unset DEF_USE_LTO
DEF_CONFLICTS_WITH="Percona Mysql"
DEF_AFTER_PATCH_METHOD="sed_stuff"
sed_stuff () {
    ${SED_BIN} -i '' -e "s|%%LOCALBASE%%|${PREFIX}|g" scripts/mysql_config.sh
    ${SED_BIN} -i '' -e "s|%%PREFIX%%|${PREFIX}|g" mysys/my_default.c
    return 0
}
DEF_AFTER_BUILD_METHOD="make_sure_data_dir_exists_or_create_it"
make_sure_data_dir_exists_or_create_it () {
    for _dir in etc tmp data var/log; do
        try "${MKDIR_BIN} -p ${SERVICE_DIR}/${_dir}"
    done
}
