DISABLE_ON="Darwin"
APP_STANDALONE="true"
APP_FULL_NAME="Zabbix monitoring system"
APP_NAME="zabbix"
APP_SHA="2e4e870bc3359f594d2d661f7e1fe9e8163ef79e"
APP_VERSION="3.0.1"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_CONFIGURE_ARGS="--enable-proxy --enable-server --enable-agent --with-jabber --with-libcurl --with-sqlite3 --with-iconv=${PREFIX} --with-iconv-include=${PREFIX}/include --with-iconv-lib=${PREFIX}/lib"
APP_REQUIREMENTS="pkgconf gmake libiconv m4 perl texinfo libidn curl iksemel readline-dynamic sqlite"
APP_EXPORTS="zabbix_get zabbix_sender zabbix_agent zabbix_agentd zabbix_proxy zabbix_server"

case "${SYSTEM_NAME}" in
    Linux)
        APP_CONFIGURE_ARGS="${APP_CONFIGURE_ARGS} --sysconfdir=/etc"
        ;;
esac
