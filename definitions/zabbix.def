DEF_DISABLE_ON="Darwin"
DEF_STANDALONE="true"
DEF_FULL_NAME="Zabbix monitoring system"
DEF_NAME="zabbix"
DEF_SHA="2de4f6f245e02786ff51747db5fad933b626387a"
DEF_VERSION="3.0.2"
DEF_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
COMMON_ZABBIX_CONF_ARGS="--enable-ipv6 --enable-agent --with-libcurl --with-sqlite3 --with-iconv=${PREFIX} --with-iconv-include=${PREFIX}/include --with-iconv-lib=${PREFIX}/lib --with-openssl=${PREFIX}"
DEF_CONFIGURE_ARGS="--enable-proxy --enable-server ${COMMON_ZABBIX_CONF_ARGS}"
if [ "${SYSTEM_NAME}" = "Linux" ]; then
    DEF_CONFIGURE_ARGS="${APP_CONFIGURE_ARGS} --sysconfdir=/etc"
fi
DEF_REQUIREMENTS="pkgconf gmake libiconv m4 perl texinfo libidn curl readline-dynamic sqlite openssl"
DEF_EXPORTS="zabbix_get zabbix_sender zabbix_agent zabbix_agentd zabbix_proxy zabbix_server"
DEF_USELESS="include share/texinfo lib/*perl*"
