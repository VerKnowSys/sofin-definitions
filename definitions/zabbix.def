DEF_DISABLE_ON="Darwin"
DEF_STANDALONE=YES
DEF_FULL_NAME="Zabbix monitoring system"
DEF_NAME="zabbix"
DEF_SHA="118c3d352172c28130ae66822c345793bdb8c559"
DEF_VERSION="3.4.7"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
COMMON_ZABBIX_CONF_ARGS="--enable-ipv6 --enable-agent --with-libcurl --without-sqlite3 --with-postgresql=${PREFIX}/bin/pg_config --with-iconv=${PREFIX} --with-iconv-include=${PREFIX}/include --with-iconv-lib=${PREFIX}/lib --with-openssl=${PREFIX} --with-libpcre=${PREFIX} --with-libevent=${PREFIX}"
DEF_CONFIGURE_ARGS="--enable-proxy --enable-server ${COMMON_ZABBIX_CONF_ARGS}"
if [ "${SYSTEM_NAME}" = "Linux" ]; then
    DEF_CONFIGURE_ARGS="${DEF_CONFIGURE_ARGS} --sysconfdir=/etc"
fi
DEF_REQUIREMENTS="pkgconf m4 libedit zlib make perl openssl autoconf automake curl-minimal postgresql96 pcre libevent"
DEF_EXPORTS="zabbix_get zabbix_sender zabbix_agent zabbix_agentd zabbix_proxy zabbix_server"
DEF_USELESS="include share/texinfo lib/*perl*"
DEF_USE_SAFE_STACK=YES
