DEF_FULL_NAME="GNUcrypt library"
DEF_NAME="libgcrypt"
DEF_SHA="d2b9e0f413064cfc67188f80d3cbda887c755a62"
DEF_VERSION="1.7.6"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.bz2"
DEF_REQUIREMENTS="bzip2 make m4 pth npth libtool libgpg-error"
DEF_CONFIGURE_ARGS="--disable-doc --with-libgpg-error-prefix=${PREFIX} --with-pth-prefix=${PREFIX}"
case "${SYSTEM_NAME}" in
    Darwin)
        DEF_CONFIGURE_ARGS="${DEF_CONFIGURE_ARGS} --disable-asm"
        DEF_NO_LTO=YES
        ;;
esac
