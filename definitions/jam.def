DEF_FULL_NAME="Jam build tool from Preforce workshop"
DEF_NAME="jam"
DEF_SHA="4bed1d529d4e742a607f462f4eb1ada32c2923a8"
DEF_VERSION="2.6"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_CONFIGURE_METHOD="no-conf"
DEF_INSTALL_METHOD="install_jam"
install_jam () {
    try "${MKDIR_BIN} -p ${PREFIX}/bin"
    if [ "${SYSTEM_NAME}" = "Darwin" ]; then
        run "${INSTALL_BIN} -v bin.macosxx86_64/jam ${PREFIX}/bin/"
        run "${INSTALL_BIN} -v bin.macosxx86_64/mkjambase ${PREFIX}/bin/"
    else
        run "${INSTALL_BIN} -v bin/jam ${PREFIX}/bin/"
        run "${INSTALL_BIN} -v bin/mkjambase ${PREFIX}/bin/"
    fi
}
DEF_EXPORTS="jam mkjambase"
