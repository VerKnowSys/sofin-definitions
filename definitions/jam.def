APP_FULL_NAME="Jam build tool from Preforce workshop"
APP_NAME="jam"
APP_SHA="4bed1d529d4e742a607f462f4eb1ada32c2923a8"
APP_VERSION="2.6"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_CONFIGURE_SCRIPT="no-conf"
APP_MAKE_METHOD="make -s ${MAKE_OPTS}"
APP_INSTALL_METHOD="install_jam"
install_jam () {
    ${MKDIR_BIN} -p ${PREFIX}/bin
    ${INSTALL_BIN} -v bin/jam ${PREFIX}/bin/
    ${INSTALL_BIN} -v bin/mkjambase ${PREFIX}/bin/
}
APP_EXPORTS="jam mkjambase"
