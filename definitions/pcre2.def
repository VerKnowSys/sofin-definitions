DEF_FULL_NAME="PCRE2 Library"
DEF_NAME="pcre2"
DEF_VERSION="10.42"
DEF_SHA="9876f2165ed6ee38d1853a8e2eaafdfbcb291b76"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.bz2"
DEF_ORIGIN="https://ftp.pcre.org/pub/pcre/${DEF_NAME}-${DEF_VERSION}.tar.bz2"
DEF_USEFUL="bin/pcre*"
DEF_EXPORTS="pcre2-config pcre2grep pcre2test"
DEF_CONFIGURE_METHOD="cmake"
case "${SYSTEM_NAME}" in
    Darwin)
        DEF_CONFIGURE_ARGS="-DPCRE2_BUILD_TESTS=OFF"
        ;;

    *)
        DEF_CONFIGURE_ARGS="-DPCRE2_BUILD_TESTS=OFF -DBUILD_STATIC_LIBS=OFF -DBUILD_SHARED_LIBS=ON"
        ;;
esac
