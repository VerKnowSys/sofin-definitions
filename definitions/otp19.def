DEF_FULL_NAME="Erlang OTP"
DEF_SHA="6f394857b2910de27b39275cdad9ed05be95bcda"
DEF_NAME="otp"
PATCHES_SITE="https://olgeni.olgeni.com/~olgeni/distfiles/"
DEF_STANDALONE=YES
MAJOR="19.3"
DEF_VERSION="${MAJOR}.0"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}_src_${MAJOR}.tar.gz" # NOTE: For non-tarball versions use: "./otp_build autoconf" to gen configure
DEF_REQUIREMENTS="pkgconf make m4 bison flex expat zlib lzma lzo xz gettext db gdbm libunwind libressl perl libgpg-error libgcrypt autoconf texinfo automake18 jpeg tiff libpng wxwidgets"
DEF_AFTER_UNPACK_METHOD="./otp_build autoconf || :" # ./otp_build remove_prebuilt_files;
DEF_CONFIGURE_ARGS="--enable-threads --enable-dynamic-ssl-lib --enable-shared-zlib --with-dynamic-trace=dtrace --enable-kernel-poll --enable-smp-support --with-ssl=${PREFIX} --disable-debug --enable-native-libs --without-odbc --enable-wx --with-dirty-schedulers --without-docs --enable-java"
DEF_INSTALL_METHOD="LANG=en_US.UTF-8 make -s install && install_repl_history"
DEF_EXPORTS="ct_run dialyzer epmd erl erlc escript run_erl to_erl typer"
DEF_CONFLICTS_WITH="Otp Elixir"
DEF_USELESS="lib/*perl* docs share"
DEF_NO_TRAP_INT_OVERFLOW=YES
DEF_NO_LTO=YES
DEF_NO_CCACHE=YES
case "${SYSTEM_NAME}" in
    FreeBSD)
        DEF_COMPILER_FLAGS="${DEF_OPTFLAGS} -fPIC -fPIE -DMAP_NORESERVE=8 -fno-omit-frame-pointer -fsanitize=safe-stack"
        DEF_LINKER_FLAGS="-L${PREFIX}/lib -L/usr/lib -ldtrace -lc++ -lc -lm -pie -fsanitize=safe-stack"

        # NOTE: this causes a hickup for HIPE:
        # erl_prettypr.erl: internal error in native_compile;
        # crash reason: undef
        # (...)
        #
        # DEF_CONFIGURE_ARGS="${DEF_CONFIGURE_ARGS} --enable-m64-build"
        ;;

    *)
        DEF_COMPILER_FLAGS="${DEF_COMPILER_FLAGS} -fno-omit-frame-pointer"
        DEF_LINKER_FLAGS="-L${PREFIX}/lib -ldtrace -lpthread"
        ;;
esac

HISTORY_PLUGIN_SOURCE="https://github.com/VerKnowSys/erlang-history"
install_repl_history () {
    run "${GIT_BIN} clone ${HISTORY_PLUGIN_SOURCE}"
    cd erlang-history
    run "PATH=$PATH:${PREFIX}/bin:/bin make install"
}
