DISABLE_ON="Linux"
APP_FULL_NAME="FFMPEG"
APP_SHA="74f82c0bdaada050ada9010ecb574fb02d434c00"
APP_NAME="ffmpeg"
APP_VERSION="2.8.5"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.bz2"
APP_REQUIREMENTS="m4 gmake perl autoconf libtool automake yasm sdl2 libressl"
if [ "${SYSTEM_NAME}" = "Darwin" ]; then
    export APP_COMPILER_ARGS="-mmacosx-version-min=10.9"
fi
APP_CONFIGURE_ARGS="--cc=cc --cxx=c++ --enable-openssl --enable-shared --disable-ffplay --disable-devices --disable-doc --disable-htmlpages --disable-podpages --disable-txtpages --disable-debug"
APP_MAKE_METHOD="gmake -s ${MAKE_OPTS}"
APP_INSTALL_METHOD="gmake install -s ${MAKE_OPTS}"
APP_EXPORTS="ffserver ffprobe ffmpeg"
