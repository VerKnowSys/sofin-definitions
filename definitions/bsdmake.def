DEF_DISABLE_ON="FreeBSD"
DEF_FULL_NAME="BSD Make"
DEF_SHA="9ce3c3fc01e0eb47d82827b1eb227eb371fefd5c"
DEF_NAME="bsdmake"
DEF_VERSION="24"
DEF_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
DEF_CONFIGURE="ignore"
PPREFIX="$(echo $PREFIX | ${SED_BIN} -e 's/\//\\\//g')" # escape / in path
BUILD_DIR="${CACHE_DIR}cache/${APP_NAME}-${APP_VERSION}-${RUNTIME_SHA}/${APP_NAME}-${APP_VERSION}"
DEF_AFTER_PATCH_CALLBACK="${GREP_BIN} -rl '@PREFIX@' . | ${XARGS_BIN} ${SED_BIN} -i -e 's/@PREFIX@/${PPREFIX}/'"
DEF_MAKE_METHOD="make -f Makefile.dist"
DEF_INSTALL_METHOD="${MKDIR_BIN} -p ${PREFIX}/bin ${PREFIX}/share/mk/bsdmake ; ${CP_BIN} -fR ${BUILD_DIR}/mk/ ${PREFIX}/share/mk/bsdmake ; ${CP_BIN} ${BUILD_DIR}/pmake ${PREFIX}/bin/bsdmake"
DEF_EXPORTS="bsdmake"
