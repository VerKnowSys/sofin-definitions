DEF_FULL_NAME="Http2 Library"
DEF_NAME="nghttp2"
DEF_SHA="4ad47f8f3738d102e89bc46852fcb64a4b80055f"
DEF_VERSION="1.15.0"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.xz"
unset DEF_CONFIGURE_ARGS
if [ "Darwin" = "${SYSTEM_NAME}" ]; then
    DEF_CONFIGURE_ARGS="--with-xml-prefix=/usr --with-libxml2=/usr"
else
    DEF_CONFIGURE_ARGS="--with-xml-prefix=${PREFIX} --with-libxml2=${PREFIX}"
fi
DEF_CONFIGURE_ARGS="${DEF_CONFIGURE_ARGS} --with-jemalloc=${PREFIX} --with-spdylay=${PREFIX} --enable-lib-only --with-libz=/usr --disable-debug --disable-examples --disable-failmalloc ZLIB_CFLAGS='-I/usr/include' ZLIB_LIBS='-lz' LIBSPDYLAY_CFLAGS='-I${PREFIX}/include' LIBSPDYLAY_LIBS='-L${PREFIX}/lib -lspdylay'"
DEF_REQUIREMENTS="make jemalloc zlib bzip2 libressl python27 libxml2 libevent spdylay"
