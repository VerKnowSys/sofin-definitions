DEF_DISABLE_ON="Linux Darwin"
DEF_FULL_NAME="Atop utility"
DEF_NAME="atop"
DEF_SHA="89655c331a69eb38960030d402bf938925bdf5d6"
DEF_VERSION="2.0.2b3"
DEF_SOURCE_PATH="${MAIN_SOURCE_REPOSITORY}${DEF_NAME}-${DEF_VERSION}.tar.gz"
DEF_CONFIGURE="ignore"
DEF_AFTER_UNPACK_METHOD="after_unpack"
after_unpack () {
    ${SED_BIN} -i '' -e "s|^CFLAGS.*$|CFLAGS  += -Wall -DFREEBSD -DP_KTHREAD=1 ${CFLAGS}|" BSDmakefile
    ${SED_BIN} -i '' -e "s|^LDFLAGS.*$|LDFLAGS  += -lncurses -lm -lz -lkvm -ldevstat ${LDFLAGS}|" BSDmakefile
    ${MKDIR_BIN} -p ${PREFIX}/bin
}
DEF_MAKE_METHOD="make -fBSDmakefile"
DEF_INSTALL_METHOD="${INSTALL_BIN} -v atop ${PREFIX}/bin/atop"
DEF_EXPORTS="atop"
