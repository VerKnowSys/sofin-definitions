case "${SYSTEM_NAME}" in
    FreeBSD)
        DEF_CONFIGURE_ARGS="${DEF_CONFIGURE_ARGS} --enable-dtrace --with-config-file-path=${SERVICE_DIR}/etc --with-iconv-dir=/usr --with-ldap=${PREFIX} --with-ldap-sasl=${PREFIX} --with-fpm-user=www --with-fpm-group=www"
