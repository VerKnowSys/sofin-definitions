DEF_FULL_NAME="OpenBSD DoAs utility (sudo alternative)"
DEF_NAME="doas"
DEF_GIT_MODE=YES
DEF_VERSION="6.0-fe6d3a342b8e4251"
DEF_GIT_CHECKOUT="master"
DEF_SOURCE_PATH="https://github.com/slicer69/doas.git"
DEF_STANDALONE=YES
DEF_AFTER_UNPACK_METHOD="prepare"
prepare () {
    ${GIT_BIN} checkout -b fe6d3a342b8e42512ce45b626684361a8814c4eb
    ${SED_BIN} -i '' -e "s#\${PREFIX}/etc/doas.conf#${SERVICE_DIR}/service.conf#g; s#/usr/local#${PREFIX}#g" Makefile
    return 0
}
case "${SYSTEM_NAME}" in
    FreeBSD)
        DEF_LINKER_FLAGS="${DEF_LINKER_FLAGS} -lpam -lutil"
        ;;
esac
DEF_EXPORTS="doas"
DEF_REQUIREMENTS="make"
DEF_CONFIGURE_METHOD="no-conf"
DEF_MAKE_METHOD="make; make; true"
DEF_INSTALL_METHOD="make install"
