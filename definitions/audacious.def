DISABLE_ON="Linux FreeBSD"
APP_FULL_NAME="Audacious"
APP_NAME="audacious"
APP_VERSION="3.5-devel"
APP_USE_GIT_PATH="true"
APP_HTTP_PATH="https://github.com/brassy/audacious.git"
APP_REQUIREMENTS="m4 gmake perl autoconf automake zlib pcre pkgconf libffi gettext python-legacy libtool glib238"
APP_CONFIGURE_SCRIPT="./autogen.sh ; ./configure"
APP_CONFIGURE_ARGS="--disable-dbus --disable-gtk"
APP_MAKE_METHOD="gmake -s ${MAKE_OPTS}"
APP_INSTALL_METHOD="gmake install -s ${MAKE_OPTS}"
APP_NO_CCACHE="YES"
APP_COMPILER_ARGS="-mmacosx-version-min=10.8"
